<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tx_all_rewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_ssl_11_white"
                android:text="-"/>
            <TextView
                android:id="@+id/tx_demon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2"
                style="@style/font_ss_11_atom"
                android:text="-"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            style="@style/font_ss_12_photon"
            android:text="@string/str_withdraw_all"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_withdraw_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_64"
        android:minHeight="@dimen/space_64"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/btn_trans_with_border"/>
</RelativeLayout>