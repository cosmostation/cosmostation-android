<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cosmos"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_bar_height"
        android:background="@color/colorBlack"
        android:theme="@style/AppTheme.AppBarOverlay">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_ssm_17_white"
            android:text="@string/str_app_applock"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_6"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/card_using_applock"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginTop="@dimen/space_8"
            android:background="@drawable/box_trans_round"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_6"
                    android:text="@string/str_using_applock" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_using_applock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_6"
                    android:clickable="false"
                    android:scaleType="fitXY"
                    android:theme="@style/ColorSwitchStyles" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/card_using_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginTop="@dimen/space_8"
            android:background="@drawable/box_trans_round"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_6"
                    android:text="@string/str_using_fingerprints" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_fingerprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_6"
                    android:clickable="false"
                    android:scaleType="fitXY"
                    android:theme="@style/ColorSwitchStyles" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/card_applock_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginTop="@dimen/space_8"
            android:background="@drawable/box_trans_round"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_6"
                    android:text="@string/str_applock_time" />

                <ImageView
                    android:id="@+id/arrow_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_next_gr" />

                <TextView
                    android:id="@+id/applock_time_text"
                    style="@style/font_ss_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_4"
                    android:layout_toLeftOf="@+id/arrow_currency"
                    android:text="" />
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>