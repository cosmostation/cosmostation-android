<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/granter_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:padding="@dimen/space_16"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:background="@drawable/box_white2_border"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/granter_title"
                style="@style/font_ssl_12_gray1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Granter"/>

            <TextView
                android:id="@+id/granter_address"
                style="@style/font_rm_12_black_daynight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/granter_title"
                android:ellipsize="middle"
                android:gravity="right"
                android:maxWidth="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_12"
                android:singleLine="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/granterAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_ssl_12_black_daynight"/>
            <TextView
                android:id="@+id/granterDenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2"
                style="@style/font_ssl_12_black_daynight" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>