<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_6"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/space_8"
    app:cardBackgroundColor="@color/colorTransBg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_18"
        android:layout_marginRight="@dimen/space_18"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/harvest_markets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/market_img"
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_64"/>
                <TextView
                    android:id="@+id/market_title"
                    android:layout_below="@+id/market_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/font_rr_12_kava"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/daily_reward_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/harvest_markets"
                android:layout_alignTop="@+id/harvest_markets"
                android:layout_alignBottom="@+id/harvest_markets"
                android:layout_marginLeft="@dimen/space_16"
                android:visibility="gone">
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayDayNight"
            android:layout_marginTop="@dimen/space_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_event_period"
                style="@style/font_rr_12_gray1"/>
            <TextView
                android:id="@+id/event_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/font_rr_12_black_daynight"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12">
            <TextView
                android:id="@+id/total_deposited_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_total_deposited_supplies"
                style="@style/font_rr_12_gray1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/total_deposited_title">
                <TextView
                    android:id="@+id/total_deposited_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    style="@style/font_rr_12_black_daynight"/>
                <TextView
                    android:id="@+id/total_deposited_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/total_deposited_symbol"
                    android:layout_toLeftOf="@+id/total_deposited_symbol"
                    android:layout_marginRight="@dimen/space_2"
                    android:text=""
                    style="@style/font_rr_12_black_daynight"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/total_deposited_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            style="@style/font_rr_12_gray1"
            android:text=""/>

    </LinearLayout>
</androidx.cardview.widget.CardView>