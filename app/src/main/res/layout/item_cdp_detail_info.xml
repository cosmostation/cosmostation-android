<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_6"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_8"
        app:cardBackgroundColor="@color/colorTransBg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/market_img"
                        android:layout_width="@dimen/space_64"
                        android:layout_height="@dimen/space_64"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true" />
                    <LinearLayout
                        android:id="@+id/safe_rate_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/cdp_safe_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_26_black_daynight"/>
                        <ImageView
                            android:id="@+id/cdp_safe_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/space_8"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/space_8"
                        android:layout_toLeftOf="@+id/safe_rate_layer"
                        android:layout_toRightOf="@+id/market_img"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cdp_market_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_kava"
                            android:textSize="@dimen/text_size_17"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/market_title"
                            style="@style/font_rr_12_gray1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/market_img"
                            android:layout_marginTop="@dimen/space_6"
                            android:gravity="center" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_view"
                android:background="@color/colorGrayDayNight"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_16"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/collateral_rate_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/space_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_min_collateral_rate"
                        style="@style/font_rr_12_gray1"/>
                    <ImageView
                        android:layout_width="@dimen/space_14"
                        android:layout_height="@dimen/space_14"
                        android:layout_marginLeft="@dimen/space_4"
                        android:src="@drawable/question_ic"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/collateral_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/collateral_rate_layer"
                    style="@style/font_rr_12_black_daynight"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10">
                <LinearLayout
                    android:id="@+id/stability_fee_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/space_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_stability_fee"
                        style="@style/font_rr_12_gray1"/>
                    <ImageView
                        android:layout_width="@dimen/space_14"
                        android:layout_height="@dimen/space_14"
                        android:layout_marginLeft="@dimen/space_4"
                        android:src="@drawable/question_ic"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/stability_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/stability_fee_layer"
                    style="@style/font_rr_12_black_daynight"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10">
                <LinearLayout
                    android:id="@+id/liquidation_penalty_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/space_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_liquidation_penalty"
                        style="@style/font_rr_12_gray1"/>
                    <ImageView
                        android:layout_width="@dimen/space_14"
                        android:layout_height="@dimen/space_14"
                        android:layout_marginLeft="@dimen/space_4"
                        android:src="@drawable/question_ic"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/liquidation_penalty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/liquidation_penalty_layer"
                    style="@style/font_rr_12_black_daynight"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_view"
                android:background="@color/colorGrayDayNight"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_16"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/current_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_current_price"
                    style="@style/font_rr_12_gray1"/>
                <TextView
                    android:id="@+id/current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/current_price_title"
                    style="@style/font_rr_12_black_daynight"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/liquidation_price_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:visibility="gone">
                <TextView
                    android:id="@+id/liquidation_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_liquidation_title1"
                    style="@style/font_rr_12_gray1"/>
                <TextView
                    android:id="@+id/liquidation_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/liquidation_price_title"
                    style="@style/font_rr_14_kava"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10">
                <TextView
                    android:id="@+id/system_max_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_max_global_debt"
                    style="@style/font_rr_12_gray1"/>
                <TextView
                    android:id="@+id/max_debt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/system_max_title"
                    style="@style/font_rr_12_black_daynight"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10">
                <TextView
                    android:id="@+id/remain_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_remain_debt"
                    style="@style/font_rr_12_gray1"/>
                <TextView
                    android:id="@+id/remain_debt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/remain_title"
                    style="@style/font_rr_12_black_daynight"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>