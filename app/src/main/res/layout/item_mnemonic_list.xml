<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="@dimen/space_6"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mnemonic_nickname"
                style="@style/font_rr_14_black_daynight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mnemonic 1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10">

                <ImageView
                    android:id="@+id/mnemonicArrowSort"
                    android:layout_width="@dimen/space_44"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/space_6"
                    android:paddingTop="@dimen/space_10"
                    android:paddingRight="@dimen/space_6"
                    android:scaleType="center"
                    android:src="@drawable/arrow_next_gr" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mnemonicArrowSort"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/font_rr_12_gray1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Derived Wallet" />

                        <TextView
                            android:id="@+id/derived_cnt"
                            style="@style/font_rr_12_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="9" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_6">

                        <TextView
                            style="@style/font_rr_12_gray1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Words Count" />

                        <TextView
                            android:id="@+id/words_cnt"
                            style="@style/font_rr_12_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="24" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_6">

                        <TextView
                            style="@style/font_rr_12_gray1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Import Date" />

                        <TextView
                            android:id="@+id/imported_date"
                            style="@style/font_rr_12_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="2022-05-09 00:14:22" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>