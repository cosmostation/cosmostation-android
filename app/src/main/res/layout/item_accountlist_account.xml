<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/accountCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_68"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/box_white2_border"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="@dimen/space_8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/accountArrowSort"
                android:layout_width="@dimen/space_24"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space_6"
                android:paddingRight="@dimen/space_6"
                android:src="@drawable/arrow_next_gr"
                android:scaleType="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <LinearLayout
                android:id="@+id/accountContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/accountArrowSort"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/accountKeyState"
                        android:layout_width="@dimen/space_24"
                        android:layout_height="@dimen/space_24"
                        android:layout_centerVertical="true"
                        android:src="@drawable/key_off" />

                    <TextView
                        android:id="@+id/accountName"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toLeftOf="@+id/accountAddress"
                        android:layout_toRightOf="@+id/accountKeyState"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/accountAddress"
                        style="@style/font_rmr_12_gray1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:maxWidth="@dimen/space_120"
                        android:layout_marginLeft="@dimen/space_8"
                        android:singleLine="true"
                        android:text="cosmos1qwl879nx9t6kef4supyazayf7vjhennyjqwjgr" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/accountAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        style="@style/font_rr_14_black_daynight"
                        android:text="-"/>
                    <TextView
                        android:id="@+id/accountDenom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        style="@style/font_rr_11_atom" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>