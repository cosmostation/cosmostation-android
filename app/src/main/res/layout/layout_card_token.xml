<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_2"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btn_token_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/dash_token_icon"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"/>
                    <TextView
                        android:id="@+id/dash_token_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_8"
                        android:text="Token"
                        style="@style/font_ss_14_white"/>
                    <ImageView
                        android:id="@+id/dash_token_link"
                        android:layout_width="@dimen/space_18"
                        android:layout_height="@dimen/space_18"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toRightOf="@+id/dash_token_symbol"
                        android:src="@drawable/wallet_detail_btn"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/dash_token_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="-"
                        style="@style/font_ssm_17_white"/>
                    <TextView
                        android:id="@+id/dash_token_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        style="@style/font_ss_14_gray1"
                        android:text="-"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_full_name"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/dash_token_denom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ss_12_white"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_12"
                android:background="@color/colorGray3"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_available"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/dash_token_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/token_reward_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_reward"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/dash_token_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/token_locked_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_locked"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/dash_token_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/token_frozen_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_frozen"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/token_frozen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/token_vesting_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_vesting"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/token_vesting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/token_harvest_deposit_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_harvest_deposited"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/token_harvest_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/token_harvest_reward_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_harvest_reward"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/token_harvest_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/btn_token_send"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/space_40"
                    android:minHeight="@dimen/space_40"
                    android:layout_marginRight="@dimen/space_5"
                    android:background="@drawable/btn_trans_with_border"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/send_ic"
                        android:drawablePadding="@dimen/space_8"
                        android:gravity="center"
                        style="@style/font_ss_12_white"
                        android:text="@string/str_send" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_token_receive"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/space_40"
                    android:minHeight="@dimen/space_40"
                    android:layout_marginLeft="@dimen/space_5"
                    android:background="@drawable/btn_trans_with_border"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/qrcode_ic"
                        android:drawablePadding="@dimen/space_8"
                        android:gravity="center"
                        style="@style/font_ss_12_white"
                        android:text="@string/str_receive" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_bep3_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:background="@drawable/btn_trans_with_border"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/bepsend_ic_s"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_12_white"
                    android:text="@string/str_bep3_send" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>