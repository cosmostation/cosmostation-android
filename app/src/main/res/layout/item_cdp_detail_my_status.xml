<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_6"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_8"
        app:cardBackgroundColor="@color/colorTransBgKava">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cdp_s_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    style="@style/font_rm_17_black_daynight"
                    android:text="@string/str_my_cdp_information"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_view"
                android:background="@color/colorGrayDayNight"
                android:layout_marginTop="@dimen/space_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/collateral_icon"
                        android:layout_width="@dimen/space_24"
                        android:layout_height="@dimen/space_24"
                        android:src="@drawable/token_default"/>
                    <TextView
                        android:id="@+id/collateral_denom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/collateral_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_8"
                        android:text="COIN"
                        style="@style/font_rr_14_black_daynight"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8">
                    <LinearLayout
                        android:id="@+id/self_deposited_amount_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/space_4">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_self_deposited_amount"
                            style="@style/font_rr_12_gray1"/>
                        <ImageView
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:layout_marginLeft="@dimen/space_4"
                            android:src="@drawable/question_ic"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/self_deposited_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/self_deposited_amount_layer"
                        style="@style/font_rr_12_black_daynight"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/self_deposited_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:gravity="right"
                    style="@style/font_rr_11_gray1"
                    android:text="-"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <LinearLayout
                        android:id="@+id/total_deposited_amount_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/space_4">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_total_deposited_amount"
                            style="@style/font_rr_12_gray1"/>
                        <ImageView
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:layout_marginLeft="@dimen/space_4"
                            android:src="@drawable/question_ic"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/total_deposited_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/total_deposited_amount_layer"
                        style="@style/font_rr_12_black_daynight"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/total_deposited_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:gravity="right"
                    style="@style/font_rr_11_gray1"
                    android:text="-"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <LinearLayout
                        android:id="@+id/expected_withdrawable_amount_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/space_4">
                        <TextView
                            android:id="@+id/expected_withdrawable_amount_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_expected_withdrawable_amount"
                            style="@style/font_rr_12_gray1"/>
                        <ImageView
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:layout_marginLeft="@dimen/space_4"
                            android:src="@drawable/question_ic"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/expected_withdrawable_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/expected_withdrawable_amount_layer"
                        style="@style/font_rr_12_black_daynight"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/expected_withdrawable_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:gravity="right"
                style="@style/font_rr_11_gray1"
                android:text="-"/>

            <LinearLayout
                android:id="@+id/collateral_actions_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/btn_deposit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/space_40"
                    android:minHeight="@dimen/space_40"
                    android:layout_marginRight="@dimen/space_5"
                    android:background="@drawable/btn_trans_with_border"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/btn_deposit_txt"
                        style="@style/font_rr_12_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/space_4"
                        android:gravity="center"
                        android:text="@string/str_collateral_deposit" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_withdraw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/space_40"
                    android:minHeight="@dimen/space_40"
                    android:layout_marginLeft="@dimen/space_5"
                    android:background="@drawable/btn_trans_with_border"
                    android:clickable="true">
                    <TextView
                        android:id="@+id/btn_withdraw_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/space_4"
                        android:gravity="center"
                        style="@style/font_rr_12_black_daynight"
                        android:text="@string/str_collateral_withdraw" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_28">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/principal_icon"
                        android:layout_width="@dimen/space_24"
                        android:layout_height="@dimen/space_24"
                        android:src="@drawable/token_default"/>
                    <TextView
                        android:id="@+id/principal_denom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/principal_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_8"
                        android:text="USDX"
                        style="@style/font_rr_14_black_daynight"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8">
                    <LinearLayout
                        android:id="@+id/loaned_amount_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/space_4">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_loaned_amount"
                            style="@style/font_rr_12_gray1"/>
                        <ImageView
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:layout_marginLeft="@dimen/space_4"
                            android:src="@drawable/question_ic"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/loaned_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/loaned_amount_layer"
                        style="@style/font_rr_12_black_daynight"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/loaned_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:gravity="right"
                    style="@style/font_rr_11_gray1"
                    android:text="-"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <LinearLayout
                        android:id="@+id/cdp_fee_amount_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/space_4">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_cdp_total_fee"
                            style="@style/font_rr_12_gray1"/>
                        <ImageView
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:layout_marginLeft="@dimen/space_4"
                            android:src="@drawable/question_ic"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/cdp_fee_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/cdp_fee_amount_layer"
                        style="@style/font_rr_12_black_daynight"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/fee_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:gravity="right"
                    style="@style/font_rr_11_gray1"
                    android:text="-"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <LinearLayout
                        android:id="@+id/expected_loanable_amount_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/space_4">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_expected_loanable_amount"
                            style="@style/font_rr_12_gray1"/>
                        <ImageView
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:layout_marginLeft="@dimen/space_4"
                            android:src="@drawable/question_ic"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/expected_loanable_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/expected_loanable_amount_layer"
                        style="@style/font_rr_12_black_daynight"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/loanable_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:gravity="right"
                    style="@style/font_rr_11_gray1"
                    android:text="-"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/principal_actions_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/btn_drawdebt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/space_40"
                    android:minHeight="@dimen/space_40"
                    android:layout_marginRight="@dimen/space_5"
                    android:background="@drawable/btn_trans_with_border"
                    android:clickable="true">

                    <TextView
                        style="@style/font_rr_12_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/space_4"
                        android:gravity="center"
                        android:text="@string/str_principal_drawdebt" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_repay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/space_40"
                    android:minHeight="@dimen/space_40"
                    android:layout_marginLeft="@dimen/space_5"
                    android:background="@drawable/btn_trans_with_border"
                    android:clickable="true">

                    <TextView
                        style="@style/font_rr_12_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/space_4"
                        android:gravity="center"
                        android:text="@string/str_principal_repay" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>