<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/nft_card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_2"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginRight="@dimen/space_18"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/nft_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name"
                            style="@style/font_ss_14_black_daynight"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8">
                        <TextView
                            android:id="@+id/nft_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="content"
                            style="@style/font_ss_12_gray1"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrayDayNight"
                android:layout_marginTop="@dimen/space_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_20">
                <TextView
                    android:id="@+id/denom_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Denom_id"
                    android:layout_marginRight="@dimen/space_30"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/denom_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:gravity="end"
                    android:text="-"
                    style="@style/font_ss_10_black_daynight"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:id="@+id/token_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Token_id"
                    android:layout_marginRight="@dimen/space_30"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/token_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:gravity="end"
                    android:text="-"
                    style="@style/font_ss_10_black_daynight"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:id="@+id/issuer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="issuer"
                    android:layout_marginRight="@dimen/space_30"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/issuer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:gravity="end"
                    android:text="-"
                    style="@style/font_ss_10_black_daynight"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>