<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_6"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_8"
        app:cardBackgroundColor="@color/colorTransBg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tx_bank"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    style="@style/font_rm_17_black_daynight"
                    android:text="@string/str_my_available_assets"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_view"
                android:background="@color/colorGrayDayNight"
                android:layout_marginTop="@dimen/space_12"
                android:layout_marginBottom="@dimen/space_12"/>

            <RelativeLayout
                android:id="@+id/collateral_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/collateral_icon"
                    android:layout_width="@dimen/space_24"
                    android:layout_height="@dimen/space_24"
                    android:src="@drawable/token_default"/>
                <TextView
                    android:id="@+id/collateral_denom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/collateral_icon"
                    android:layout_marginLeft="@dimen/space_8"
                    android:text="COIN"
                    style="@style/font_rr_14_black_daynight"/>
                <TextView
                    android:id="@+id/collateral_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_rr_14_black_daynight"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="-2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        style="@style/font_rr_12_gray1"
                        android:text="@string/str_approximate_value"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/collateral_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        style="@style/font_rr_12_gray1"
                        android:text="-"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2">
                <ImageView
                    android:id="@+id/kava_icon"
                    android:layout_width="@dimen/space_24"
                    android:layout_height="@dimen/space_24"
                    android:src="@drawable/token_kava"/>
                <TextView
                    android:id="@+id/kava_denom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/kava_icon"
                    android:layout_marginLeft="@dimen/space_8"
                    android:text="KAVA"
                    style="@style/font_rr_14_kava"/>
                <TextView
                    android:id="@+id/kava_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_rr_14_black_daynight"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="-2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        style="@style/font_rr_12_gray1"
                        android:text="@string/str_approximate_value"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/kava_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        style="@style/font_rr_12_gray1"
                        android:text="-"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>