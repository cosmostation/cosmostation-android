<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/tx_remove_liquidity_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_postprice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    android:text="@string/tx_sif_exit_pool"
                    style="@style/font_ss_15_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_signer"
                    style="@style/font_ss_12_gray1" />

                <TextView
                    android:id="@+id/tx_remove_liquidity_signer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text="-"
                    style="@style/font_ss_12_white" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">

                <TextView
                    android:id="@+id/tx_liquidity_withdraw_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_liquidity_withdraw_coins"
                    style="@style/font_ss_12_gray1" />

                <RelativeLayout
                    android:id="@+id/native_asset_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx_liquidity_withdraw_title">

                    <TextView
                        android:id="@+id/tx_liquidity_native_symbol"
                        android:layout_width="@dimen/space_60"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        style="@style/font_ss_12_white" />

                    <TextView
                        android:id="@+id/tx_liquidity_native_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_liquidity_native_symbol"
                        android:layout_toLeftOf="@+id/tx_liquidity_native_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/native_asset_layout">

                    <TextView
                        android:id="@+id/tx_liquidity_exteranl_symbol"
                        android:layout_width="@dimen/space_60"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        android:text=""
                        style="@style/font_ss_12_white" />

                    <TextView
                        android:id="@+id/tx_liquidity_exteranl_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_liquidity_exteranl_symbol"
                        android:layout_toLeftOf="@+id/tx_liquidity_exteranl_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>