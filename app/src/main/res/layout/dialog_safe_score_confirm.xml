<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_32">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white2_border"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_24"
                    style="@style/font_ss_17_black_daynight"
                    android:gravity="center"
                    android:text="Risk Score"
                    android:visibility="gone"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:src="@drawable/riskscore_img"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/before_risk_layer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:background="@drawable/btn_score_safe_fill"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/before_risk_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ssm_12_black_daynight"
                            android:gravity="center"
                            android:text="SAFE"/>
                        <TextView
                            android:id="@+id/before_risk_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_26_black_daynight"
                            android:gravity="center"
                            android:text="20.00"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:src="@drawable/ic_risk_arrow_black"/>
                    <LinearLayout
                        android:id="@+id/after_risk_layer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:background="@drawable/btn_score_safe_fill"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/after_risk_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ssm_12_black_daynight"
                            android:gravity="center"
                            android:text="SAFE"/>
                        <TextView
                            android:id="@+id/after_risk_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_26_black_daynight"
                            android:gravity="center"
                            android:text="20.00"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_view"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:background="@color/colorGray10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18">
                    <TextView
                        android:id="@+id/current_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_current_title1"
                        style="@style/font_ss_12_gray1"/>

                    <TextView
                        android:id="@+id/current_price"
                        style="@style/font_ssl_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="-" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18">
                    <TextView
                        android:id="@+id/before_liquidation_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_liquidation_title1"
                        style="@style/font_ss_12_gray1"/>

                    <TextView
                        android:id="@+id/before_liquidation_price"
                        style="@style/font_ssl_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="-" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18">
                    <TextView
                        android:id="@+id/after_liquidation_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_liquidation_title1"
                        style="@style/font_ss_12_gray1"/>

                    <TextView
                        android:id="@+id/after_liquidation_price"
                        style="@style/font_ssl_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="-" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_view"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:background="@color/colorGray10"/>


                <TextView
                    android:id="@+id/dialog_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    style="@style/font_ss_14_gray1"
                    android:text="@string/str_help_risk"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_view"
                    android:layout_marginTop="@dimen/space_24"
                    android:background="@color/colorGray10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_nega"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@color/colorTrans"
                        style="@style/font_ss_14_red"
                        android:text="@string/str_cancel"/>
                    <View
                        android:layout_width="@dimen/space_view"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray10"/>
                    <Button
                        android:id="@+id/btn_posi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@color/colorTrans"
                        style="@style/font_ss_14_black_daynight"
                        android:text="@string/str_confirm"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>