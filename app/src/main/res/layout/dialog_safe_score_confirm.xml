<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white2_border"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_title"
                    style="@style/font_rm_17_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_18"
                    android:gravity="center"
                    android:text="@string/str_risk_rate" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginRight="@dimen/space_18"
                    android:src="@drawable/riskscore_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_18"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/before_risk_layer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/btn_score_safe_fill"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/before_risk_rate"
                            style="@style/font_rr_12_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="SAFE" />

                        <TextView
                            android:id="@+id/before_risk_score"
                            style="@style/font_ss_26_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="20.00" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:src="@drawable/ic_risk_arrow_black" />

                    <LinearLayout
                        android:id="@+id/after_risk_layer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/btn_score_safe_fill"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/after_risk_rate"
                            style="@style/font_rr_12_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="SAFE" />

                        <TextView
                            android:id="@+id/after_risk_score"
                            style="@style/font_ss_26_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="20.00" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_view"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_18"
                    android:background="@color/colorGray10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_18">

                    <TextView
                        android:id="@+id/current_price_title"
                        style="@style/font_rr_12_gray1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_current_title1" />

                    <TextView
                        android:id="@+id/current_price"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="-" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_18">

                    <TextView
                        android:id="@+id/before_liquidation_price_title"
                        style="@style/font_rr_12_gray1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_liquidation_title1" />

                    <TextView
                        android:id="@+id/before_liquidation_price"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="-" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_18">

                    <TextView
                        android:id="@+id/after_liquidation_price_title"
                        style="@style/font_rr_12_gray1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_liquidation_title1" />

                    <TextView
                        android:id="@+id/after_liquidation_price"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="-" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_view"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_18"
                    android:background="@color/colorGray10" />


                <TextView
                    android:id="@+id/dialog_msg"
                    style="@style/font_ss_14_gray1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_18"
                    android:text="@string/str_help_risk" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_view"
                    android:layout_marginTop="@dimen/space_24"
                    android:background="@color/colorGray10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_nega"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorTrans"
                        android:text="@string/str_cancel"
                        android:textAllCaps="false" />

                    <View
                        android:layout_width="@dimen/space_view"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray10" />

                    <Button
                        android:id="@+id/btn_posi"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorTrans"
                        android:text="@string/str_confirm"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>