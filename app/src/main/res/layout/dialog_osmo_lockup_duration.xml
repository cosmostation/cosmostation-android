<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12"
            android:text="Unbonding Duration"
            style="@style/font_ss_17_black" />

        <Button
            android:id="@+id/btn_1day"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_marginTop="@dimen/space_12"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:background="@drawable/btn_bottom_select_dialog"
            style="@style/font_ss_14_white"
            android:text="1 Day"
            android:textColor="@color/color_bottom_dialog_btn_text"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_7day"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_marginTop="@dimen/space_12"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:background="@drawable/btn_bottom_select_dialog"
            style="@style/font_ss_14_white"
            android:text="7 Day"
            android:textColor="@color/color_bottom_dialog_btn_text"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_14day"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_marginTop="@dimen/space_12"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:background="@drawable/btn_bottom_select_dialog"
            style="@style/font_ss_14_white"
            android:text="14 Day"
            android:textColor="@color/color_bottom_dialog_btn_text"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>