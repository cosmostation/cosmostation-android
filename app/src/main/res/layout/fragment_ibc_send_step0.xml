<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/font_ss_14_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_source_chain" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_marginTop="@dimen/space_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:background="@drawable/box_gray" />

                    <ImageView
                        android:id="@+id/img_from_chain"
                        android:layout_width="@dimen/space_32"
                        android:layout_height="@dimen/space_32"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        tools:src="@drawable/chain_cosmos" />

                    <TextView
                        android:id="@+id/txt_from_chain"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toRightOf="@+id/img_from_chain"
                        tools:text="Cosmos" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginTop="@dimen/space_12"
                android:layout_marginRight="@dimen/space_8"
                android:src="@drawable/interchain_arrow" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/font_ss_14_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_destination_chain" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_marginTop="@dimen/space_4">

                    <LinearLayout
                        android:id="@+id/to_chain_layer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:background="@drawable/btn_trans_with_border"
                        android:orientation="horizontal" />

                    <ImageView
                        android:id="@+id/img_to_chain"
                        android:layout_width="@dimen/space_32"
                        android:layout_height="@dimen/space_32"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        tools:src="@drawable/chain_iris" />

                    <TextView
                        android:id="@+id/txt_to_chain"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toRightOf="@+id/img_to_chain"
                        tools:text="Iris" />

                    <ImageView
                        android:id="@+id/dialog_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/space_16"
                        android:src="@drawable/arrow_down_gr" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            style="@style/font_ss_14_gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:text="@string/str_ibc_send_channel" />

        <RelativeLayout
            android:id="@+id/btn_channel_relayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginRight="@dimen/space_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:background="@drawable/btn_trans_with_border" />

            <TextView
                android:id="@+id/txt_to_relayer_channel"
                style="@style/font_rr_14_black_daynight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_16"
                tools:text="Channel-14" />

            <ImageView
                android:id="@+id/relayer_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_send_arrow"
                tools:src="@drawable/wellknown" />

            <ImageView
                android:id="@+id/img_send_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_16"
                android:src="@drawable/arrow_down_gr" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/font_rr_14_black_daynight"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:layout_weight="1"
            android:background="@drawable/btn_trans_with_border"
            android:minHeight="@dimen/space_45"
            android:text="@string/str_cancel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_next"
            style="@style/font_rr_14_photon_daynight"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:layout_weight="1"
            android:background="@drawable/btn_trans_with_photon_border"
            android:minHeight="@dimen/space_45"
            android:text="@string/str_next"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>
