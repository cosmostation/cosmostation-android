<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_8"
    android:scaleX="1.0"
    android:scaleY="1.0">

    <androidx.cardview.widget.CardView
        android:id="@+id/select_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chain_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginVertical="@dimen/space_10"
                android:layout_marginStart="@dimen/space_12"
                android:src="@drawable/chain_cosmos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chain_name"
                style="@style/font_sb_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginTop="@dimen/space_16"
                android:ellipsize="end"
                android:maxWidth="@dimen/space_120"
                android:maxLines="1"
                android:textColor="@color/color_base01"
                app:layout_constraintStart_toEndOf="@+id/chain_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chain_path"
                style="@style/font_sb_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginTop="@dimen/space_3"
                android:ellipsize="middle"
                android:maxWidth="@dimen/space_100"
                android:maxLines="1"
                android:textColor="@color/color_base02"
                app:layout_constraintStart_toEndOf="@+id/chain_img"
                app:layout_constraintTop_toBottomOf="@+id/chain_name" />

            <TextView
                android:id="@+id/chain_legacy"
                style="@style/font_sm_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4"
                android:layout_marginTop="@dimen/space_3"
                android:background="@drawable/round_box_deprecated"
                android:paddingHorizontal="@dimen/space_6"
                android:paddingVertical="@dimen/space_2"
                android:text="@string/str_legacy"
                android:textAllCaps="true"
                android:textColor="@color/color_base02"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/chain_path"
                app:layout_constraintTop_toBottomOf="@+id/chain_name" />

            <TextView
                android:id="@+id/chain_type_badge"
                style="@style/font_sm_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_2"
                android:layout_marginTop="@dimen/space_3"
                android:background="@drawable/round_box_deprecated"
                android:paddingHorizontal="@dimen/space_6"
                android:paddingVertical="@dimen/space_2"
                android:textAllCaps="false"
                android:textColor="@color/color_base02"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/chain_legacy"
                app:layout_constraintTop_toBottomOf="@+id/chain_name" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/skeleton_chain_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shimmer_base_alpha="0.8">

                <View
                    android:layout_width="80dp"
                    android:layout_height="@dimen/space_20"
                    android:background="@drawable/skeleton_shape" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/chain_balance"
                style="@style/font_sb_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_2"
                android:ellipsize="end"
                android:maxWidth="@dimen/space_200"
                android:maxLines="1"
                android:textColor="@color/color_base01"
                app:layout_constraintBottom_toBottomOf="@id/chain_name"
                app:layout_constraintEnd_toStartOf="@+id/chain_denom"
                app:layout_constraintTop_toTopOf="@id/chain_name" />

            <TextView
                android:id="@+id/chain_denom"
                style="@style/font_sb_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_16"
                android:textColor="@color/color_base01"
                app:layout_constraintBaseline_toBaselineOf="@+id/chain_balance"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/chain_asset_cnt"
                style="@style/font_sb_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_16"
                android:textColor="@color/color_base02"
                app:layout_constraintBottom_toBottomOf="@+id/chain_path"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chain_path" />

            <TextView
                android:id="@+id/chain_not_respond"
                style="@style/font_sb_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_16"
                android:text="Node not respond"
                android:textColor="@color/color_red02"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>