<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_14_gray1"
                    android:text="@string/str_source_chain"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_marginTop="@dimen/space_4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:background="@drawable/box_gray" />

                    <ImageView
                        android:id="@+id/img_from_chain"
                        android:layout_width="@dimen/space_32"
                        android:layout_height="@dimen/space_32"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        tools:src="@drawable/chain_cosmos" />
                    <TextView
                        android:id="@+id/txt_from_chain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_from_chain"
                        android:layout_marginLeft="@dimen/space_4"
                        style="@style/font_rr_14_black_daynight"
                        android:text="Cosmos"/>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:layout_centerVertical="true"
                android:src="@drawable/interchain_arrow"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_14_gray1"
                    android:text="@string/str_destination_chain"/>
                <RelativeLayout
                    android:id="@+id/btn_to_chain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_marginTop="@dimen/space_4"
                    android:clickable="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:background="@drawable/box_gray"/>

                    <ImageView
                        android:id="@+id/img_to_chain"
                        android:layout_width="@dimen/space_32"
                        android:layout_height="@dimen/space_32"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        tools:src="@drawable/chain_iris" />

                    <TextView
                        android:id="@+id/txt_to_chain"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toRightOf="@+id/img_to_chain"
                        tools:text="Iris" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginLeft="@dimen/space_16"
            style="@style/font_ss_14_gray1"
            android:text="@string/str_to_swap_coin"/>
        <RelativeLayout
            android:id="@+id/btn_to_send_coin"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_4"
            android:layout_height="@dimen/space_50"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:background="@drawable/btn_trans_with_border"/>
            <ImageView
                android:id="@+id/img_to_send_coin"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_centerVertical="true"
                android:src="@drawable/token_default"/>
            <TextView
                android:id="@+id/txt_to_send_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_to_send_coin"
                android:layout_marginLeft="@dimen/space_6"
                style="@style/font_rr_14_black_daynight"
                android:text="Coin"/>
            <TextView
                android:id="@+id/txt_to_send_denom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_to_send_coin"
                android:layout_toRightOf="@+id/txt_to_send_coin"
                android:layout_marginLeft="@dimen/space_4"
                style="@style/font_rr_12_gray1"
                android:text="()"/>
            <TextView
                android:id="@+id/txt_to_send_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_to_send_denom"
                android:layout_toLeftOf="@+id/img_send_arrow"
                android:layout_marginLeft="@dimen/space_6"
                android:layout_marginRight="@dimen/space_6"
                style="@style/font_rr_14_black_daynight"
                android:text="-"/>
            <ImageView
                android:id="@+id/img_send_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_down_gr"/>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_18"
            android:layout_marginLeft="@dimen/space_16"
            style="@style/font_ss_14_gray1"
            android:text="@string/str_relayer_status"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_gray"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:paddingTop="@dimen/space_12"
            android:paddingBottom="@dimen/space_12"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_bep3_max_once"
                    style="@style/font_rr_12_gray1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/once_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/font_rr_12_black_daynight"/>
                    <TextView
                        android:id="@+id/once_max_denom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        android:text="Coin"
                        style="@style/font_rr_12_black_daynight"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cap_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginLeft="@dimen/space_4"
                android:orientation="vertical"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_bep3_system_max"
                        style="@style/font_rr_12_gray1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/system_max_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            style="@style/font_rr_12_black_daynight"/>
                        <TextView
                            android:id="@+id/system_max_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="Coin"
                            style="@style/font_rr_12_black_daynight"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_bep3_remain_cap"
                        style="@style/font_rr_12_gray1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/remain_cap_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            style="@style/font_rr_12_black_daynight"/>
                        <TextView
                            android:id="@+id/remain_cap_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="Coin"
                            style="@style/font_rr_12_black_daynight"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>






    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_rr_14_black_daynight"
            android:textAllCaps="false"
            android:text="@string/str_cancel"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_photon_border"
            style="@style/font_rr_14_photon_daynight"
            android:textColor="@color/colorPhotonDayNight"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>