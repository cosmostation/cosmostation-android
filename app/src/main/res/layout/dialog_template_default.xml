<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite2DayNight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_header_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_title"
            style="@style/font_ss_17_black_daynight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24"
            android:gravity="center"
            tools:text="Title" />

        <TextView
            android:id="@+id/dialog_msg"
            style="@style/font_ss_12_black_daynight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/space_24"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_12"
            android:layout_marginRight="@dimen/space_24"
            tools:text="Description" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_left"
                style="@style/font_ss_14_black_daynight"
                android:background="@color/colorTrans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                tools:text="Button Title" />

            <View
                android:id="@+id/btn_border"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorGray4"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_right"
                style="@style/font_ss_14_black_daynight"
                android:background="@color/colorWhite2DayNight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:visibility="gone"
                tools:text="Button Title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>