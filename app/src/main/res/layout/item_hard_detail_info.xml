<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_2"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginRight="@dimen/space_18"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/hard_markets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/pool_img"
                        android:layout_width="@dimen/space_64"
                        android:layout_height="@dimen/space_64" />

                    <TextView
                        android:id="@+id/pool_title"
                        android:layout_below="@+id/market_img"
                        android:layout_width="@dimen/space_72"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        style="@style/font_ss_12_kava" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/hard_markets"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_supply_apy"
                            style="@style/font_ss_12_gray1" />

                        <TextView
                            android:id="@+id/supply_apy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            style="@style/font_ssl_14_white"
                            android:gravity="right"
                            android:text="-" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_borrow_apy"
                            style="@style/font_ss_12_gray1" />

                        <TextView
                            android:id="@+id/borrow_apy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            style="@style/font_ssl_14_white"
                            android:gravity="right"
                            android:text="-" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_supply_incentive_apy"
                            style="@style/font_ss_12_gray1" />

                        <TextView
                            android:id="@+id/supply_incentive_apy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            style="@style/font_ssl_14_white"
                            android:gravity="right"
                            android:text="-" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_borrow_incentive_apy"
                            style="@style/font_ss_12_gray1" />

                        <TextView
                            android:id="@+id/borrow_incentive_apy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            style="@style/font_ssl_14_white"
                            android:gravity="right"
                            android:text="-" />
                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray3"
                android:layout_marginTop="@dimen/space_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12">

                <TextView
                    android:id="@+id/total_deposited_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_total_deposited_supplies"
                    style="@style/font_ss_12_gray1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/total_deposited_title">

                    <TextView
                        android:id="@+id/total_deposited_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        style="@style/font_ss_12_white" />

                    <TextView
                        android:id="@+id/total_deposited_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/total_deposited_symbol"
                        android:layout_toLeftOf="@+id/total_deposited_symbol"
                        android:layout_marginRight="@dimen/space_4"
                        android:text=""
                        style="@style/font_ss_12_white" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/total_deposited_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/font_ss_12_gray1"
                android:text="" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4">

                <TextView
                    android:id="@+id/total_borrow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_total_borrowed_supplies"
                    style="@style/font_ss_12_gray1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/total_borrow_title">

                    <TextView
                        android:id="@+id/total_borrow_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        style="@style/font_ss_12_white" />

                    <TextView
                        android:id="@+id/total_borrow_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/total_borrow_symbol"
                        android:layout_toLeftOf="@+id/total_borrow_symbol"
                        android:layout_marginRight="@dimen/space_4"
                        android:text=""
                        style="@style/font_ss_12_white" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/total_borrow_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/font_ss_12_gray1"
                android:text="" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4">

                <TextView
                    android:id="@+id/remain_borrowable_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_total_remain_supplies"
                    style="@style/font_ss_12_gray1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/remain_borrowable_title">

                    <TextView
                        android:id="@+id/remain_borrowable_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        style="@style/font_ss_12_white" />

                    <TextView
                        android:id="@+id/remain_borrowable_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/remain_borrowable_symbol"
                        android:layout_toLeftOf="@+id/remain_borrowable_symbol"
                        android:layout_marginRight="@dimen/space_4"
                        android:text=""
                        style="@style/font_ss_12_white" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/remain_borrowable_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/font_ss_12_gray1"
                android:text="" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>