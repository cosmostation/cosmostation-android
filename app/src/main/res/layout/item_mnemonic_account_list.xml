<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/accountCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_54"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_6"
        android:background="@drawable/box_white2_border"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/space_4"
        android:paddingRight="@dimen/space_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chain_img"
                android:layout_width="@dimen/space_44"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/space_6"
                android:paddingRight="@dimen/space_6"
                android:scaleType="center"
                android:src="@drawable/chain_default" />

            <LinearLayout
                android:id="@+id/accountContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_8"
                android:layout_toRightOf="@+id/chain_img"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/account_address"
                        style="@style/font_rmm_12_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="middle"
                        android:maxWidth="@dimen/space_180"
                        android:singleLine="true"
                        android:text="cosmos1qwl879nx9t6kef4supyazayf7vjhennyjqwjgr"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/account_state"
                        style="@style/font_rr_12_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="middle"
                        android:gravity="right"
                        android:maxWidth="@dimen/space_120"
                        android:singleLine="true"
                        android:text="" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/key_path"
                        style="@style/font_rr_10_gray1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/accountAvailable"
                            style="@style/font_rr_12_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="loading..." />

                        <TextView
                            android:id="@+id/accountDenom"
                            style="@style/font_rr_12_black_daynight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dim_layer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_54"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/box_white3_border"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_6"
        android:visibility="gone"/>
</RelativeLayout>