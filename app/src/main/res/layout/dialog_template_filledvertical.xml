<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_colorwhite2daynight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/font_rm_17_black_daynight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_24"
            android:gravity="center"
            android:text=""
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_msg"
            style="@style/font_rr_12_black_daynight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_12"
            android:gravity="center"
            android:text=""
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_one"
            style="@style/font_rr_15_black_daynight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_gravity="center"
            android:background="@color/colorTrans"
            android:drawablePadding="@dimen/space_24"
            android:paddingRight="@dimen/space_10"
            android:text="Button Title"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGrayDayNight" />

        <Button
            android:id="@+id/btn_two"
            style="@style/font_rr_15_black_daynight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_gravity="center"
            android:background="@color/colorTrans"
            android:drawablePadding="@dimen/space_24"
            android:paddingRight="@dimen/space_10"
            android:text="Button Title"
            android:textAllCaps="false" />

        <View
            android:id="@+id/btn_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGrayDayNight"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_three"
            style="@style/font_rr_15_black_daynight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_gravity="center"
            android:background="@color/colorTrans"
            android:drawablePadding="@dimen/space_24"
            android:paddingRight="@dimen/space_10"
            android:text="Button Title"
            android:textAllCaps="false"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_four"
            style="@style/font_rr_15_black_daynight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_gravity="center"
            android:background="@color/colorTrans"
            android:drawablePadding="@dimen/space_24"
            android:paddingRight="@dimen/space_10"
            android:text="Button Title"
            android:textAllCaps="false"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>