<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/space_14">
                <TextView
                    android:id="@+id/ibc_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_ibc_info_title"
                    style="@style/font_ss_14_white"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ibc_info_title">
                    <ImageView
                        android:id="@+id/ibc_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/unknown" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/opposite_chain_img"
                            android:layout_width="@dimen/space_32"
                            android:layout_height="@dimen/space_32"
                            android:layout_centerVertical="true"
                            android:src="@drawable/cosmos_wh_main"/>
                        <TextView
                            android:id="@+id/opposite_chain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/opposite_chain_img"
                            android:layout_marginLeft="@dimen/space_4"
                            style="@style/font_ss_14_white"
                            android:text="Cosmos"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_28">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/current_chain_img"
                            android:layout_width="@dimen/space_32"
                            android:layout_height="@dimen/space_32"
                            android:layout_centerVertical="true"
                            android:src="@drawable/iris_wh"/>
                        <TextView
                            android:id="@+id/current_chain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/current_chain_img"
                            android:layout_marginLeft="@dimen/space_4"
                            style="@style/font_ss_14_white"
                            android:text="Iris"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:layout_marginTop="@dimen/space_4"
                android:layout_marginBottom="@dimen/space_14">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/btn_trans_with_border">
                        <TextView
                            android:id="@+id/opposite_chain_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_6"
                            android:layout_marginTop="@dimen/space_6"
                            android:singleLine="true"
                            style="@style/font_ss_12_white"
                            android:text="Osmosis"/>
                        <TextView
                            android:id="@+id/opposite_channel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_6"
                            android:layout_marginTop="@dimen/space_6"
                            style="@style/font_ss_12_white"
                            android:text="channel-141"/>
                        <TextView
                            android:id="@+id/opposite_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_6"
                            style="@style/font_ss_12_white"
                            android:text="uosmo"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/space_40"
                    android:layout_height="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginRight="@dimen/space_8"
                    android:src="@drawable/arrow_auth" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/btn_trans_with_border">
                        <TextView
                            android:id="@+id/current_chain_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            style="@style/font_ss_12_white"
                            android:layout_marginTop="@dimen/space_6"
                            android:layout_marginRight="@dimen/space_6"
                            android:singleLine="true"
                            android:text="cosmoshub-3"/>
                        <TextView
                            android:id="@+id/current_channel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            style="@style/font_ss_12_white"
                            android:layout_marginTop="@dimen/space_6"
                            android:layout_marginRight="@dimen/space_6"
                            android:text="channel-0"/>
                        <TextView
                            android:id="@+id/current_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_12_white"
                            android:layout_gravity="end"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_margin="@dimen/space_6"
                            android:text="-"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>