<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhiteDayNight"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/space_4">

        <TextView
            android:id="@+id/header_title"
            style="@style/font_rr_12_gray1"
            android:layout_width="@dimen/space_300"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_14"
            android:text="Recently Histories" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/header_title">

            <TextView
                android:id="@+id/recycler_cnt"
                style="@style/font_rr_12_black_daynight"
                android:layout_width="@dimen/space_80"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_14"
                android:gravity="end"
                android:text="00" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_below="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="2dp" />
</RelativeLayout>