<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_2"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cro_icon"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:src="@drawable/token_hdac"/>
                <TextView
                    android:id="@+id/hdac_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/cro_icon"
                    android:layout_marginLeft="@dimen/space_8"
                    android:text="HDAC Testnet"
                    style="@style/font_ss_15_hdac"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_12"
                android:background="@color/colorGray3"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:id="@+id/burn_from_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/burn_from_address_title">
                    <TextView
                        android:id="@+id/burn_from_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_2"
                        android:text=""
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:id="@+id/burn_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burn Amount"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:id="@+id/burn_amount_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/burn_amount_title">
                    <TextView
                        android:id="@+id/burn_amount_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="HDAC"
                        style="@style/font_ss_15_hdac"/>
                    <TextView
                        android:id="@+id/burn_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/burn_amount_symbol"
                        android:layout_toLeftOf="@+id/burn_amount_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text=""
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
            <TextView
                android:id="@+id/tx_fee_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tx Fee"
                style="@style/font_ss_12_gray1"/>
            <RelativeLayout
                android:id="@+id/tx_send_single_coin_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tx_fee_title">
                <TextView
                    android:id="@+id/horizon_tx_fee_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="HDAC"
                    style="@style/font_ss_15_hdac"/>
                <TextView
                    android:id="@+id/horizon_tx_fee_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/horizon_tx_fee_symbol"
                    android:layout_toLeftOf="@+id/horizon_tx_fee_symbol"
                    android:layout_marginRight="@dimen/space_2"
                    android:text=""
                    style="@style/font_ss_12_white"/>
            </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/swap_icon"
        android:layout_margin="@dimen/space_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_root"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon_arrow" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/swap_icon">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rizon_icon"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:src="@drawable/token_rizon"/>
                <TextView
                    android:id="@+id/rizon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rizon_icon"
                    android:layout_marginLeft="@dimen/space_8"
                    android:text="RIZON Testnet"
                    style="@style/font_ss_14_rizon"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_12"
                android:background="@color/colorGray3"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:id="@+id/rizon_to_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rizon_to_address_title">
                    <TextView
                        android:id="@+id/rizon_to_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_2"
                        android:text=""
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:id="@+id/mint_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mint Amount"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:id="@+id/mint_amount_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mint_amount_title">
                    <TextView
                        android:id="@+id/mint_amount_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="ATOLO"
                        style="@style/font_ss_14_rizon"/>
                    <TextView
                        android:id="@+id/rizon_mint_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/mint_amount_symbol"
                        android:layout_toLeftOf="@+id/mint_amount_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text=""
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/control_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                style="@style/font_ss_15_white"
                android:text="@string/str_back" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_token_swap"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_tokenswap"
                android:drawablePadding="@dimen/space_8"
                android:gravity="center"
                style="@style/font_ss_15_token_swap"
                android:text="@string/str_token_swap" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>