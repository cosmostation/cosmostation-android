<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_above="@+id/bottom_control">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="50dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/nft_img_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_16">
                <androidx.cardview.widget.CardView
                    android:id="@+id/nft_root"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    app:cardBackgroundColor="@color/colorTransBg"
                    app:cardCornerRadius="@dimen/space_10">
                    <ImageView
                        android:id="@+id/nft_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/box_dash_line"
                        android:layerType="software"/>
                    <TextView
                        android:id="@+id/add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/icon_addimage"
                        style="@style/font_ss_14_black_daynight"
                        android:padding="@dimen/space_12"
                        android:text="Add Image"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/space_12"
                        android:layout_marginRight="@dimen/space_12">
                        <ImageView
                            android:id="@+id/delete_btn"
                            android:layout_width="@dimen/space_28"
                            android:layout_height="@dimen/space_28"
                            android:layout_margin="1dp"
                            android:background="@drawable/box_round_white"
                            android:backgroundTint="@color/colorWhiteDayNight"
                            android:padding="@dimen/space_4"
                            android:src="@drawable/icon_delete"
                            android:layout_gravity="right"
                            android:visibility="gone"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/nft_img_layer">
                <TextView
                    android:id="@+id/nft_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="NFT Name"/>
                <EditText
                    android:id="@+id/nft_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40"
                    android:background="@drawable/edittext_box"
                    style="@style/font_ss_14_black_daynight"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16" />
                <TextView
                    android:id="@+id/nft_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_24"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="NFT Description"/>
                <EditText
                    android:id="@+id/nft_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_100"
                    android:background="@drawable/edittext_box"
                    style="@style/font_ss_14_black_daynight"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:gravity="top"/>
                <TextView
                    android:id="@+id/nft_denom_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_40"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="Denom ID (Random Unique)"/>
                <EditText
                    android:id="@+id/nft_denom_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40"
                    android:background="@drawable/edittext_box"
                    style="@style/font_ss_14_black_daynight"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16" />
                <TextView
                    android:id="@+id/nft_denom_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_24"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="Denom Name"/>
                <EditText
                    android:id="@+id/nft_denom_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40"
                    android:background="@drawable/edittext_box"
                    style="@style/font_ss_14_black_daynight"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/space_24"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_black_daynight"
            android:textAllCaps="false"
            android:text="@string/str_cancel"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_photon_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>