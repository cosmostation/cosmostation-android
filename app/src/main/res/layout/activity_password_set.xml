<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cosmos"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/layer_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_40"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_17_white"
                    android:text="@string/str_password_init"/>

                <TextView
                    android:id="@+id/tv_password_msg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    style="@style/font_ss_12_gray1"
                    android:text="@string/str_password_msg1"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_password_msg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_6"
                    style="@style/font_ss_12_red"
                    android:text="@string/str_password_msg2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_36"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12">
                    <ImageView
                        android:id="@+id/img_circle0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:id="@+id/img_circle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:id="@+id/img_circle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:id="@+id/img_circle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:layout_width="@dimen/space_8"
                        android:layout_height="@dimen/space_8"
                        android:layout_marginStart="@dimen/space_12"
                        android:background="@drawable/ic_plus"/>
                    <ImageView
                        android:id="@+id/img_circle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_12"
                        android:background="@drawable/ic_pass_gr"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <wannabit.io.cosmostaion.widget.StopViewPager
            android:id="@+id/pager_keyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
        </wannabit.io.cosmostaion.widget.StopViewPager>
    </LinearLayout>
</RelativeLayout>