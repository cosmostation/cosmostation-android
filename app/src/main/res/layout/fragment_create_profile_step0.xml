<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_above="@+id/bottom_control">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="50dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profile_img_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_16">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_root"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    app:cardBackgroundColor="@color/colorTrans"
                    app:cardCornerRadius="@dimen/space_10"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/profile_cover_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/box_dash_line"
                        android:layerType="software" />

                    <TextView
                        android:id="@+id/add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/icon_addphoto"
                        style="@style/font_ss_14_white"
                        android:padding="@dimen/space_12"
                        android:text="Add Image" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/space_12"
                        android:layout_marginRight="@dimen/space_12">

                        <ImageView
                            android:id="@+id/delete_btn"
                            android:layout_width="@dimen/space_28"
                            android:layout_height="@dimen/space_28"
                            android:layout_margin="1dp"
                            android:background="@drawable/box_round_white"
                            android:backgroundTint="@color/colorGray4"
                            android:padding="@dimen/space_4"
                            android:src="@drawable/icon_delete"
                            android:layout_gravity="right"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/profile_img_layer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="Profile Image" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="@dimen/space_54"
                    android:layout_height="@dimen/space_54"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/space_12"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/profileimg_none"
                    android:scaleType="centerCrop"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorGray3"
                    android:fitsSystemWindows="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="Dtag" />

                <EditText
                    android:id="@+id/profile_dtag"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40"
                    android:background="@drawable/edittext_round_box"
                    style="@style/font_ss_14_white"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_24"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="Nickname" />

                <EditText
                    android:id="@+id/profile_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40"
                    android:background="@drawable/edittext_round_box"
                    style="@style/font_ss_14_white"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_24"
                    android:layout_marginLeft="@dimen/space_16"
                    style="@style/font_ss_14_gray1"
                    android:text="Bio" />

                <EditText
                    android:id="@+id/profile_bio"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_100"
                    android:background="@drawable/edittext_round_box"
                    style="@style/font_ss_14_white"
                    android:layout_marginTop="@dimen/space_6"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:gravity="top" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/space_24"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_cancel" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next" />
    </LinearLayout>
</RelativeLayout>