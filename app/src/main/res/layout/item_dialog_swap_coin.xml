<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTrans"
    android:clickable="true"
    android:paddingLeft="@dimen/space_8"
    android:paddingTop="@dimen/space_4"
    android:paddingRight="@dimen/space_8"
    android:paddingBottom="@dimen/space_4">

    <LinearLayout
        android:id="@+id/rootLayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_centerVertical="true"
        android:background="@drawable/box_chain_trans_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coinImg"
            android:layout_width="@dimen/space_26"
            android:layout_height="@dimen/space_26"
            android:layout_marginLeft="@dimen/space_8"
            android:src="@drawable/token_default" />

        <TextView
            android:id="@+id/coinName"
            style="@style/font_rr_14_black_daynight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:singleLine="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/check"
            style="@style/font_rmr_9_gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/space_8"
            android:background="@drawable/check"
            android:visibility="gone"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/dim_layer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:background="@drawable/box_round_gray"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"/>
</RelativeLayout>