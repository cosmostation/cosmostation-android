<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTrans"
    android:paddingLeft="@dimen/space_8"
    android:paddingRight="@dimen/space_8"
    android:paddingTop="@dimen/space_4"
    android:paddingBottom="@dimen/space_4"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/rootLayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_centerVertical="true"
        android:background="@drawable/box_chain_trans_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coinImg"
            android:layout_width="@dimen/space_26"
            android:layout_height="@dimen/space_26"
            android:layout_marginLeft="@dimen/space_8"
            android:src="@drawable/token_default" />

        <TextView
            android:id="@+id/coinName"
            style="@style/font_rr_14_black_daynight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:singleLine="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/dim_layer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/box_round_gray"
        android:visibility="gone">
    </FrameLayout>
</RelativeLayout>