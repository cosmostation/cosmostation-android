<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_undelegate_status"
                    style="@style/font_ss_12_white"/>
                <TextView
                    android:id="@+id/undelegate_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ssl_14_white"
                    android:text="-"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/space_12"
                android:background="@color/colorGray3"/>

            <RelativeLayout
                android:id="@+id/undelegate_detail_layer0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8">
                <TextView
                    android:id="@+id/undelegate_detail_time0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/space_140"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/undelegate_detail_amount0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
                <TextView
                    android:id="@+id/undelegate_detail_time0_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_below="@+id/undelegate_detail_time0"
                    android:text=""
                    style="@style/font_ss_10_gray1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/undelegate_detail_layer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:id="@+id/undelegate_detail_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/space_140"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/undelegate_detail_amount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
                <TextView
                    android:id="@+id/undelegate_detail_time1_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_below="@+id/undelegate_detail_time1"
                    android:text=""
                    style="@style/font_ss_10_gray1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/undelegate_detail_layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:id="@+id/undelegate_detail_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/space_140"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/undelegate_detail_amount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
                <TextView
                    android:id="@+id/undelegate_detail_time2_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_below="@+id/undelegate_detail_time2"
                    android:text=""
                    style="@style/font_ss_10_gray1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/undelegate_detail_layer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:id="@+id/undelegate_detail_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/space_140"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/undelegate_detail_amount3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
                <TextView
                    android:id="@+id/undelegate_detail_time3_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_below="@+id/undelegate_detail_time3"
                    android:text=""
                    style="@style/font_ss_10_gray1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/undelegate_detail_layer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">
                <TextView
                    android:id="@+id/undelegate_detail_time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/space_140"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/undelegate_detail_amount4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssl_12_white"/>
                <TextView
                    android:id="@+id/undelegate_detail_time4_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_below="@+id/undelegate_detail_time4"
                    android:text=""
                    style="@style/font_ss_10_gray1"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>