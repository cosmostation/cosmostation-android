<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@color/colorWhiteDayNight"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteDayNight"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/font_ssm_17_black_daynight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_osmosis_defi_lab" />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/lab_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:background="@android:color/transparent"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorColor="@color/color_osmosis"
            app:tabIconTint="@color/color_osmosis" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/lab_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lab_tab"/>
    </RelativeLayout>
</RelativeLayout>