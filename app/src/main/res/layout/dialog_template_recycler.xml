<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite2DayNight"
    android:padding="@dimen/space_32">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray2DayNight"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_max="@dimen/space_300">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            style="@style/font_ss_17_black_daynight"
            android:gravity="center"
            android:text="title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:layout_marginBottom="@dimen/space_4"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
