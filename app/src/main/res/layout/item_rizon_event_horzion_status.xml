<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_status_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardBackgroundColor="@color/colorTransBgRizon"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_total_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_rizon_event_horizon_status_title"
                    style="@style/font_ss_12_gray1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/tx_total_result_title"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:id="@+id/tx_result_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DONE"
                        style="@style/font_ss_12_black_daynight"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_rizon_event_horizon_request_time"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    style="@style/font_ss_12_black_daynight"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_rizon_event_horizon_request_id"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_request_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    style="@style/font_ss_12_black_daynight"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/hdacLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16"
                android:background="@drawable/btn_trans_with_border"
                android:padding="@dimen/space_16">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/hdac_icon"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:src="@drawable/token_hdac"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/hdac_icon"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/hdac_swap_status_icon"
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/rizon_swap_status"
                            android:src="@drawable/icon_pending"
                            android:visibility="gone"
                            app:tint="@color/color_hdac" />
                        <TextView
                            android:id="@+id/hdac_status"
                            style="@style/font_ss_12_hdac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_8"
                            android:layout_toRightOf="@+id/hdac_icon"
                            android:gravity="end"
                            android:text="Success" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/burn_from_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/burn_from_address_title"
                        android:layout_marginLeft="@dimen/space_16">
                        <TextView
                            android:id="@+id/burn_from_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="end"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:layout_marginRight="@dimen/space_2"
                            android:text=""
                            style="@style/font_ss_12_black_daynight"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/burn_tx_hash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tx Hash"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/burn_tx_hash_title">
                        <TextView
                            android:id="@+id/burn_tx_hash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_16"
                            android:gravity="end"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:text=""
                            style="@style/font_ss_12_black_daynight"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/burn_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burn Amount"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:id="@+id/burn_amount_layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/burn_amount_title">
                        <TextView
                            android:id="@+id/burn_amount_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="HDAC"
                            style="@style/font_ss_12_hdac"/>
                        <TextView
                            android:id="@+id/burn_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/burn_amount_symbol"
                            android:layout_toLeftOf="@+id/burn_amount_symbol"
                            android:layout_marginRight="@dimen/space_2"
                            android:text=""
                            style="@style/font_ss_12_black_daynight"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/swap_icon"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_root"
                app:srcCompat="@drawable/icon_arrow" />
            <LinearLayout
                android:id="@+id/rizonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/btn_trans_with_border"
                android:padding="@dimen/space_16">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/rizon_icon"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:src="@drawable/token_rizon"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/rizon_icon"
                        android:gravity="end">
                        <ImageView
                            android:id="@+id/rizon_swap_status_icon"
                            android:layout_width="@dimen/space_14"
                            android:layout_height="@dimen/space_14"
                            android:src="@drawable/icon_pending"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/rizon_swap_status"
                            android:visibility="invisible"/>
                        <TextView
                            android:id="@id/rizon_swap_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text=""
                            android:gravity="end"
                            style="@style/font_ss_12_rizon"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/rizon_to_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rizon_to_address_title"
                        android:layout_marginLeft="@dimen/space_16">
                        <TextView
                            android:id="@+id/rizon_to_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="end"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:layout_marginRight="@dimen/space_2"
                            android:text=""
                            style="@style/font_ss_12_black_daynight"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/rizon_tx_hash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tx Hash"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rizon_tx_hash_title">
                        <TextView
                            android:id="@+id/rizon_tx_hash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:text="--"
                            android:layout_marginLeft="@dimen/space_16"
                            style="@style/font_ss_12_black_daynight"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/rizon_mint_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mint Amount"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:id="@+id/rizon_mint_amount_layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rizon_mint_amount_title">
                        <TextView
                            android:id="@+id/rizon_mint_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="ATOLO"
                            style="@style/font_ss_12_rizon"/>
                        <TextView
                            android:id="@+id/rizon_mint_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/rizon_mint_symbol"
                            android:layout_toLeftOf="@+id/rizon_mint_symbol"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="--"
                            style="@style/font_ss_10_black_daynight"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>