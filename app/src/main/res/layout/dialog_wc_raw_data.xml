<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_32">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_colorwhite2daynight"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/font_rm_17_black_daynight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:gravity="center"
            android:text="Sign Request" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginRight="@dimen/space_10"
            android:background="@color/colorTrans">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/wc_raw_data"
                    style="@style/font_rr_12_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_40"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_40"
                    android:gravity="left" />
            </ScrollView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/space_24"
            android:background="@color/colorGray4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_nega"
                style="@style/font_ss_14_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTrans"
                android:text="@string/str_cancel"
                android:textAllCaps="false" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorGray4" />

            <Button
                android:id="@+id/btn_posi"
                style="@style/font_rr_14_black_daynight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTrans"
                android:text="@string/str_confirm"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>