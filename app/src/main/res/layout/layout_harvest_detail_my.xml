<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_2"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/space_6"
    app:cardBackgroundColor="@color/colorTransBgKava"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cdp_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                style="@style/font_ss_17_black_daynight"
                android:text="@string/str_my_harvest_information"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayDayNight"
            android:layout_marginTop="@dimen/space_16"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/space_16">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/deposit_icon"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:src="@drawable/token_ic" />
            <TextView
                android:id="@+id/deposit_denom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/deposit_icon"
                android:layout_marginLeft="@dimen/space_8"
                android:text="COIN"
                style="@style/font_ss_14_black_daynight"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">
            <TextView
                android:id="@+id/deposited_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_my_deposited_amount"
                style="@style/font_ss_12_gray1"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/deposited_title">
                <TextView
                    android:id="@+id/deposited_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Coin"
                    style="@style/font_ss_12_black_daynight"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/deposited_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/deposited_symbol"
                    android:layout_toLeftOf="@+id/deposited_symbol"
                    android:text="-"
                    style="@style/font_ss_12_black_daynight"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/deposit_actions_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/btn_deposit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginRight="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:id="@+id/btn_deposit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/deposit_s_ic"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    style="@style/font_ss_14_black_daynight"
                    android:text="@string/str_collateral_deposit" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_withdraw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:id="@+id/btn_withdraw_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/withdraw_s_ic"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    style="@style/font_ss_14_black_daynight"
                    android:text="@string/str_collateral_withdraw" />
            </RelativeLayout>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_28">
            <ImageView
                android:id="@+id/reward_icon"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:src="@drawable/token_ic"/>
            <TextView
                android:id="@+id/reward_denom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/reward_icon"
                android:layout_marginLeft="@dimen/space_8"
                android:text="HARD"
                style="@style/font_ss_14_hard"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">
            <TextView
                android:id="@+id/reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_my_harvest_reward"
                style="@style/font_ss_12_gray1"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/reward_title">
                <TextView
                    android:id="@+id/harvest_reward_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Coin"
                    style="@style/font_ss_12_black_daynight"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/harvest_reward_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/harvest_reward_symbol"
                    android:layout_toLeftOf="@+id/harvest_reward_symbol"
                    android:text="-"
                    style="@style/font_ss_12_black_daynight"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/daily_reward_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">
            <TextView
                android:id="@+id/daily_reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_est_daily_reward"
                style="@style/font_ss_12_gray1"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/daily_reward_title">
                <TextView
                    android:id="@+id/daily_reward_denom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Coin"
                    style="@style/font_ss_12_black_daynight"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/daily_reward_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/daily_reward_denom"
                    android:layout_toLeftOf="@+id/daily_reward_denom"
                    android:text="-"
                    style="@style/font_ss_12_black_daynight"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_claim_reward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:minHeight="@dimen/space_40"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_8"
            android:background="@drawable/btn_trans_with_border"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/incentive_s_ic"
                android:drawablePadding="@dimen/space_8"
                android:gravity="center"
                style="@style/font_ss_14_black_daynight"
                android:text="@string/str_claim_reward" />
        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>