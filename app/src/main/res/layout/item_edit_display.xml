<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/chain_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:layout_marginTop="@dimen/space_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_8"
        app:cardBackgroundColor="@color/colorWhite2DayNight">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/chainSort"
                android:layout_width="@dimen/space_44"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space_6"
                android:paddingRight="@dimen/space_6"
                android:src="@drawable/ic_handle"
                android:scaleType="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/chainSort"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/chain_remove_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/space_6"
                        android:src="@drawable/icon_listdelete" />
                    <ImageView
                        android:id="@+id/chain_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toRightOf="@+id/chain_remove_img"/>

                    <TextView
                        android:id="@+id/chain_name"
                        style="@style/font_rr_14_black_daynight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toRightOf="@+id/chain_img"
                        android:maxWidth="@dimen/space_120"
                        android:text="Wallet Name" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>