<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_cdp_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardBackgroundColor="@color/colorTransBgKava"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginRight="@dimen/space_18"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/harvest_markets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/market_img"
                        android:layout_width="@dimen/space_64"
                        android:layout_height="@dimen/space_64"
                        android:src="@drawable/stakingkava"/>
                    <TextView
                        android:id="@+id/market_title"
                        android:layout_below="@+id/market_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/space_2"
                        style="@style/font_ss_12_white"
                        android:text="BTC : USDX"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/harvest_markets"
                    android:layout_alignTop="@+id/harvest_markets"
                    android:layout_alignBottom="@+id/harvest_markets"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginBottom="-2dp"
                    android:orientation="vertical"
                    android:gravity="bottom">

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray3"
                android:layout_marginTop="@dimen/space_16"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_event_period"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/event_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/font_ss_12_white"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_10">
                <TextView
                    android:id="@+id/total_delegated_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_total_delegated_amount"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/total_delegated_title">
                    <TextView
                        android:id="@+id/total_delegated_denom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="KAVA"
                        style="@style/font_ss_12_kava"/>
                    <TextView
                        android:id="@+id/total_delegated_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/total_delegated_denom"
                        android:layout_toLeftOf="@+id/total_delegated_denom"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ssl_12_white"/>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_10">
                <TextView
                    android:id="@+id/reward_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_kava_delegator_reward"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/reward_title">
                    <TextView
                        android:id="@+id/harvest_reward_denom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="HARD"
                        style="@style/font_ss_12_hard"/>
                    <TextView
                        android:id="@+id/harvest_reward_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/harvest_reward_denom"
                        android:layout_toLeftOf="@+id/harvest_reward_denom"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ssl_12_white"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_kava_reward"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="@dimen/space_16"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/incentive_s_ic"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_14_white"
                    android:text="@string/str_claim_reward" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
