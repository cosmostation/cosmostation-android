<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:id="@+id/price_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_current_price"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/per_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ssl_14_white"
                    android:text="-"/>
                <LinearLayout
                    android:id="@+id/per_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/per_price"
                    android:layout_marginTop="@dimen/space_2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/ic_price_updown"
                        android:layout_width="@dimen/space_12"
                        android:layout_height="@dimen/space_12"
                        android:layout_marginTop="@dimen/space_2"
                        android:layout_marginRight="@dimen/space_2"
                        android:src="@drawable/ic_price_down"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/dash_price_updown_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        style="@style/font_ssl_12_white"
                        android:text="-"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_24"
                    android:text="(CoinGecko)"
                    style="@style/font_ss_9_gray1"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/buy_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray3"/>
                <RelativeLayout
                    android:id="@+id/btn_buy_coin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_40"
                    android:minHeight="@dimen/space_40"
                    android:layout_marginTop="-4dp"
                    android:clickable="true">
                    <TextView
                        android:id="@+id/tv_buy_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:drawableLeft="@drawable/card_ic"
                        android:drawablePadding="@dimen/space_8"
                        android:gravity="center"
                        style="@style/font_ss_14_photon"
                        android:text="@string/str_buy_atom" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>