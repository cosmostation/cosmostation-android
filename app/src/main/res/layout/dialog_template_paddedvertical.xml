<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_colorwhite2daynight"
    android:orientation="vertical"
    android:padding="@dimen/space_14">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/font_rm_17_black_daynight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:text="dialog_title" />

    <TextView
        android:id="@+id/dialog_msg"
        style="@style/font_rr_14_black_daynight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_8"
        android:text="dialog_msg" />

    <Button
        android:id="@+id/btn_one"
        style="@style/font_rr_14_black_daynight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginRight="@dimen/space_12"
        android:background="@drawable/box_chain_trans_border"
        android:minHeight="@dimen/space_45"
        android:text="Button Title"
        android:textAllCaps="false"
        android:textColor="@color/colorBlackDayNight" />

    <Button
        android:id="@+id/btn_two"
        style="@style/font_rr_14_black_daynight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:background="@drawable/box_chain_trans_border"
        android:minHeight="@dimen/space_45"
        android:text="Button Title"
        android:textAllCaps="false"
        android:textColor="@color/colorBlackDayNight" />

    <Button
        android:id="@+id/btn_three"
        style="@style/font_rr_14_black_daynight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:background="@drawable/box_chain_trans_border"
        android:minHeight="@dimen/space_45"
        android:text="Button Title"
        android:textAllCaps="false"
        android:textColor="@color/colorBlackDayNight"
        android:visibility="gone" />
</LinearLayout>