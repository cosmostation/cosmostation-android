<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:paddingTop="@dimen/space_6"
            android:paddingBottom="@dimen/space_6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_8">

                <ImageView
                    android:id="@+id/chain_img"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_chain_img" />

                <TextView
                    android:id="@+id/chain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    style="@style/font_ss_14_white"
                    android:text="Chain Name" />
            </LinearLayout>

            <TextView
                android:id="@+id/chain_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_30"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:layout_marginTop="@dimen/space_6"
                style="@style/font_ss_14_gray1"
                android:singleLine="true"
                android:ellipsize="middle" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>