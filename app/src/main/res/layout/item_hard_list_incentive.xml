<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_6"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_8"
        app:cardBackgroundColor="@color/colorTransBgKava">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_rr_14_black_daynight"
                android:text="@string/str_kava_hard_incentive_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                style="@style/font_rr_12_gray1"
                android:text="@string/str_kava_hard_incentive_msg"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:id="@+id/kava_incentive_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="KAVA"
                    style="@style/font_rr_12_kava"/>
                <TextView
                    android:id="@+id/kava_incentive_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/kava_incentive_symbol"
                    android:layout_toLeftOf="@+id/kava_incentive_symbol"
                    android:layout_marginRight="@dimen/space_2"
                    android:text="-"
                    style="@style/font_rr_12_black_daynight"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4">
                <TextView
                    android:id="@+id/hard_incentive_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="HARD"
                    style="@style/font_rr_12_hard"/>
                <TextView
                    android:id="@+id/hard_incentive_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/hard_incentive_symbol"
                    android:layout_toLeftOf="@+id/hard_incentive_symbol"
                    android:layout_marginRight="@dimen/space_2"
                    android:text="-"
                    style="@style/font_rr_12_black_daynight"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_claim_incentive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/incentive_s_ic"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    style="@style/font_rr_12_black_daynight"
                    android:text="@string/str_claim_incentive" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>