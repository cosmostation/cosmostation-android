<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_control">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/space_12"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="@dimen/space_8"
                app:cardBackgroundColor="@color/colorTransBg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_16"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_fees"
                            style="@style/font_rr_12_gray1"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/fee_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="-"
                                style="@style/font_rr_14_black_daynight"/>
                            <TextView
                                android:id="@+id/fee_denom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_2"
                                android:text="KAVA"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/color_kava"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_view"
                        android:layout_marginTop="@dimen/space_16"
                        android:background="@color/colorGrayDayNight"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16">
                        <TextView
                            style="@style/font_rr_12_gray1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_incentive_amount_title" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="right">
                                <TextView
                                    android:id="@+id/tx_incentive_kava_amount"
                                    style="@style/font_rr_12_black_daynight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="" />
                                <TextView
                                    style="@style/font_rr_12_black_daynight"
                                    android:layout_width="@dimen/space_40"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/space_2"
                                    android:gravity="end"
                                    android:text="KAVA" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="right">
                                <TextView
                                    android:id="@+id/tx_incentive_hard_amount"
                                    style="@style/font_rr_12_black_daynight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="" />
                                <TextView
                                    style="@style/font_rr_12_black_daynight"
                                    android:layout_width="@dimen/space_40"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/space_2"
                                    android:gravity="end"
                                    android:text="HARD" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="right">
                                <TextView
                                    android:id="@+id/tx_incentive_swp_amount"
                                    style="@style/font_rr_12_black_daynight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-" />
                                <TextView
                                    style="@style/font_rr_12_black_daynight"
                                    android:layout_width="@dimen/space_40"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/space_2"
                                    android:gravity="end"
                                    android:text="SWP" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_20">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/str_lock_up"
                            style="@style/font_rr_12_gray1"/>
                        <TextView
                            android:id="@+id/lockup_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:text=""
                            style="@style/font_rr_12_black_daynight"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:text="@string/str_memo"
                        style="@style/font_rr_12_gray1"/>
                    <TextView
                        android:id="@+id/memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:lines="2"
                        android:ellipsize="end"
                        android:text="-"
                        style="@style/font_rr_12_black_daynight"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_before"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_rr_14_black_daynight"
            android:textAllCaps="false"
            android:text="@string/str_back"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_photon_border"
            style="@style/font_rr_14_photon_daynight"
            android:textAllCaps="false"
            android:text="@string/str_confirm"/>
    </LinearLayout>
</RelativeLayout>