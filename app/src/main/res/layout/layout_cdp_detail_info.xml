<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_6"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/space_8"
    app:cardBackgroundColor="@color/colorTransBg"
    android:foreground="@null"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_16">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/market_img"
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_64"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:id="@+id/safe_rate_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/cdp_safe_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ss_26_black_daynight"/>
                    <ImageView
                        android:id="@+id/cdp_safe_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/market_img"
                    android:layout_toLeftOf="@+id/safe_rate_layer"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/cdp_market_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ssm_17_kava"/>
                    <TextView
                        android:id="@+id/market_title"
                        android:layout_below="@+id/market_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/space_8"
                        style="@style/font_ss_12_gray1"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayDayNight"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/collateral_rate_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_min_collateral_rate"
                    style="@style/font_ss_12_gray1"/>
                <ImageView
                    android:layout_width="@dimen/space_14"
                    android:layout_height="@dimen/space_14"
                    android:layout_marginLeft="@dimen/space_4"
                    android:src="@drawable/question_ic"/>
            </LinearLayout>
            <TextView
                android:id="@+id/collateral_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_black_daynight"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">
            <LinearLayout
                android:id="@+id/stability_fee_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_stability_fee"
                    style="@style/font_ss_12_gray1"/>
                <ImageView
                    android:layout_width="@dimen/space_14"
                    android:layout_height="@dimen/space_14"
                    android:layout_marginLeft="@dimen/space_4"
                    android:src="@drawable/question_ic"/>
            </LinearLayout>
            <TextView
                android:id="@+id/stability_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ss_14_black_daynight"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">
            <LinearLayout
                android:id="@+id/liquidation_penalty_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_liquidation_penalty"
                    style="@style/font_ss_12_gray1"/>
                <ImageView
                    android:layout_width="@dimen/space_14"
                    android:layout_height="@dimen/space_14"
                    android:layout_marginLeft="@dimen/space_4"
                    android:src="@drawable/question_ic"/>
            </LinearLayout>
            <TextView
                android:id="@+id/liquidation_penalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_black_daynight"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayDayNight"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/current_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_current_price"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ss_14_black_daynight"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/liquidation_price_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:visibility="gone">
            <TextView
                android:id="@+id/liquidation_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_liquidation_title1"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/liquidation_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_kava"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_max_global_debt"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/max_debt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ss_14_black_daynight"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_remain_debt"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/remain_debt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ss_14_black_daynight"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>