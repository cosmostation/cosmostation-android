<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_32">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_ss_15_hdac"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_16"
            android:drawableLeft="@drawable/token_hdac"
            android:drawablePadding="@dimen/space_8"
            android:text="HDAC Balance info"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/space_16"
            android:padding="@dimen/space_16"
            android:background="#f2f3f4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/font_ss_12_gray1"
                android:text="Address" />
            <TextView
                android:id="@+id/hdac_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6"
                style="@style/font_ss_12_gray8"
                android:text="htmreYHCaMMXCG2j5Qbn6mS8dQWfQWbw" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                style="@style/font_ss_12_gray1"
                android:text="Balance" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_6"
                android:layout_gravity="end">
                <TextView
                    android:id="@+id/hdac_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_12_gray8"
                    android:text="22001.2175464566433526" />
                <TextView
                    android:id="@+id/hdac_amount_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_6"
                    style="@style/font_ss_12_hdac"
                    android:text="HDAC" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/space_16"
            android:background="@color/colorGray10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_nega"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@drawable/btn_dia_white_left"
                style="@style/font_ss_14_gray8"
                android:text="@string/str_cancel"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorGray10"/>
            <Button
                android:id="@+id/btn_posi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@drawable/btn_dia_white_right"
                style="@style/font_ss_14_red"
                android:text="@string/str_confirm"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>