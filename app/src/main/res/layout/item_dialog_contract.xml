<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTrans"
    android:paddingLeft="@dimen/space_16"
    android:paddingTop="@dimen/space_4"
    android:paddingRight="@dimen/space_16"
    android:paddingBottom="@dimen/space_4">

    <LinearLayout
        android:id="@+id/rootLayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:background="@drawable/box_chain_trans_border"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chainImg"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24"
            android:layout_marginLeft="@dimen/space_10" />

        <TextView
            android:id="@+id/chainName"
            style="@style/font_rr_14_black_daynight"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_6"
            android:layout_marginRight="@dimen/space_16"
            android:layout_weight="1"
            android:singleLine="true" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_display_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/space_6"
            android:scaleType="fitXY"
            android:theme="@style/ColorSwitchStyles" />
    </LinearLayout>
</LinearLayout>