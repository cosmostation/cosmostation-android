<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_mode_base05</item>
        <item name="colorPrimaryDark">@color/color_mode_base01</item>
        <item name="colorAccent">@color/color_blue01</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialog</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Intro">
        <item name="android:windowBackground">@mipmap/intro_bg</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/color_mode_base01</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:titleMargin">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ActionBarAppTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="colorPrimary">@color/color_mode_base05</item>
        <item name="colorPrimaryDark">@color/color_mode_base01</item>
        <item name="colorAccent">@color/color_blue01</item>
        <item name="android:statusBarColor">@color/color_mode_base01</item>
        <item name="android:windowBackground">@color/color_mode_base01</item>
        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialog</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="actionBarStyle">@style/SolidActionBar</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/color_mode_base05</item>
        <item name="colorPrimary">@color/color_mode_base01</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SolidActionBar" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="FlatButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/color_blue01</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_only_base01</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>

    <style name="TextViewLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/color_mode_base04</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>

    <style name="BottomSheetTitle" parent="TextViewH3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_mode_base05</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/color_mode_base04</item>
        <item name="hintTextColor">@color/color_blue01</item>
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/color_red01</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="InputEditText" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_mode_base05</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewH1" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextViewH2" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewH3" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewH4" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewH5" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewH6" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewH7" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewH8" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
