<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/intro_bg_gr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_intro_gr"/>
    <ImageView
        android:id="@+id/intro_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_intro"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_240">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/cosmostaion"
                android:scaleType="fitXY"/>
            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by Cosmostation"
                android:layout_marginTop="@dimen/space_100"
                android:layout_centerHorizontal="true"
                android:letterSpacing="0.31"
                android:lineSpacingExtra="6sp"
                style="@style/font_ss_12_gray6"
                android:visibility="invisible"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="@dimen/space_16"
            style="@style/font_ss_12_gray1"
            android:gravity="center"
            android:text="@string/str_intro"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_layer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_12"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cosmostation_logo"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_36"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_import"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:minHeight="@dimen/space_45"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:background="@drawable/btn_trans_with_border"
                style="@style/font_ss_14_white"
                android:text="@string/str_import"/>

            <LinearLayout
                android:id="@+id/import_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:orientation="horizontal"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/btn_import_mnemonic"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_45"
                    android:layout_marginRight="@dimen/space_4"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/btn_trans_with_border">
                    <LinearLayout
                        android:id="@+id/import_mnemonic_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            style="@style/font_ss_9_photon"
                            android:text="@string/str_import2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            style="@style/font_ss_14_white"
                            android:text="@string/str_mnemonic"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_watch_address"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_45"
                    android:layout_marginLeft="@dimen/space_4"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/btn_trans_with_border">
                    <LinearLayout
                        android:id="@+id/import_watch_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            style="@style/font_ss_9_photon"
                            android:text="@string/str_watch"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            style="@style/font_ss_14_white"
                            android:text="@string/str_address"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_marginTop="@dimen/space_12"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:text="@string/str_create"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_12"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/check_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_4"
                android:src="@drawable/ic_checkbox_checked"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_ss_12_gray1"
                android:gravity="center"
                android:text="Accept User Service Agreement and Privacy Policy"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>