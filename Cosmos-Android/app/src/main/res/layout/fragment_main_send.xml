<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layer_refresher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/layer_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/space_4"
                android:paddingBottom="@dimen/space_8"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg"
                    app:cardUseCompatPadding="true" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/space_16"
                        android:paddingTop="@dimen/space_12"
                        android:paddingBottom="@dimen/space_12"
                        android:paddingRight="@dimen/space_4">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_account"
                                android:layout_width="@dimen/space_24"
                                android:layout_height="@dimen/space_24"
                                android:layout_centerVertical="true"
                                android:src="@drawable/key_off"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/img_account"
                                android:layout_marginLeft="@dimen/space_4"
                                android:layout_centerVertical="true"
                                style="@style/font_ss_14_white"
                                android:singleLine="true"
                                android:text="@string/str_my_address"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/web_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/space_8"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/wallet_detail_btn"/>
                                <ImageView
                                    android:id="@+id/address_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/space_8"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/qrcode_ic"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/account_Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/space_12"
                            android:layout_marginTop="@dimen/space_2"
                            style="@style/font_ss_12_white"
                            android:singleLine="true"
                            android:text=""/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_atom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_2"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg2"
                    app:cardUseCompatPadding="true" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_16">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dash_atom_icon"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:src="@drawable/atom_ic"/>
                            <TextView
                                android:id="@+id/dash_atom_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/dash_atom_icon"
                                android:layout_marginLeft="@dimen/space_8"
                                android:text="ATOM"
                                style="@style/font_ss_14_atom"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="vertical"
                                android:gravity="right">
                                <TextView
                                    android:id="@+id/dash_atom_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="-"
                                    style="@style/font_ssm_17_white"/>
                                <TextView
                                    android:id="@+id/dash_atom_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    style="@style/font_ss_14_gray1"
                                    android:text="-"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_12"
                            android:background="@color/colorGray3"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_12">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_available"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_undelegate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="-"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_delegated"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_delegate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="-"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_unbonding"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_unbonding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="-"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_reward"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="-"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_photon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_2"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg2"
                    app:cardUseCompatPadding="true" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_16">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dash_photon_icon"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:layout_centerVertical="true"
                                android:src="@drawable/photon_ic"/>
                            <TextView
                                android:id="@+id/dash_photon_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/dash_photon_icon"
                                android:layout_marginLeft="@dimen/space_8"
                                android:layout_centerVertical="true"
                                android:text="PHOTON"
                                style="@style/font_ss_14_photon"/>
                            <TextView
                                android:id="@+id/dash_photon_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="right"
                                android:text="â‚© 12,3434,324"
                                style="@style/font_ssl_14_white"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_12"
                            android:background="@color/colorGray3"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_12">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_available"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_photon_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="232,743.738291"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reward"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_photon_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="0.342123"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_2"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg2"
                    app:cardUseCompatPadding="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_price"
                            style="@style/font_ss_12_gray1"/>
                        <TextView
                            android:id="@+id/dash_atom_per_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            style="@style/font_ssl_12_white"
                            android:text="-"/>
                        <LinearLayout
                            android:id="@+id/dash_atom_per_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/dash_atom_per_price"
                            android:layout_marginTop="@dimen/space_2"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:id="@+id/ic_price_updown"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:src="@drawable/ic_price_down"/>
                            <TextView
                                android:id="@+id/dash_atom_price_updown_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                style="@style/font_ssl_12_white"
                                android:text="-0.95% (24h)"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_24"
                            android:text="(CoinMarketCap)"
                            style="@style/font_ss_9_gray1"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_validator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_2"
                    android:layout_marginBottom="@dimen/space_12"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg2"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/space_16"
                            android:paddingRight="@dimen/space_16"
                            android:paddingTop="@dimen/space_16">
                            <ImageView
                                android:id="@+id/img_guide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_12"
                                android:src="@drawable/guide_img"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/space_16"
                                android:layout_toRightOf="@+id/img_guide">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/font_ssm_14_white"
                                    android:text="@string/str_front_guide_title"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/font_ss_12_gray1"
                                    android:text="@string/str_front_guide_msg"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_12"
                            android:layout_marginLeft="@dimen/space_16"
                            android:layout_marginRight="@dimen/space_16"
                            android:background="@color/colorGray3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/space_4"
                            android:layout_marginBottom="@dimen/space_4"
                            android:layout_marginLeft="@dimen/space_16"
                            android:layout_marginRight="@dimen/space_16">
                            <Button
                                android:id="@+id/btn_guide"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/space_44"
                                android:background="?android:attr/selectableItemBackground"
                                style="@style/font_ss_14_photon"
                                android:text="@string/str_guide"/>
                            <Button
                                android:id="@+id/btn_faq"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/space_44"
                                android:background="?android:attr/selectableItemBackground"
                                style="@style/font_ss_14_photon"
                                android:text="@string/str_faq"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>