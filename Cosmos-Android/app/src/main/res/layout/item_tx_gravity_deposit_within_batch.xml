<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/tx_gravity_deposit_batch_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/msgicon_depositwithinbatch"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    android:text="@string/tx_gravity_deposit_batch"
                    style="@style/font_ss_15_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_gravity_deposit_batch_address"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_gravity_deposit_batch_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text="-"
                    style="@style/font_ss_12_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_gravity_deposit_batch_id"
                    android:layout_marginTop="@dimen/space_10"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_gravity_deposit_batch_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text="-"
                    style="@style/font_ss_12_white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12">
                    <TextView
                        style="@style/font_ss_12_gray1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_gravity_create_pool_deposit" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right">
                            <TextView
                                android:id="@+id/tx_gravity_deposit_batch_amount1"
                                style="@style/font_ssl_12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-" />
                            <TextView
                                android:id="@+id/tx_gravity_deposit_batch_symbol1"
                                style="@style/font_ss_12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_2"
                                android:text="-" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right">
                            <TextView
                                android:id="@+id/tx_gravity_deposit_batch_amount2"
                                style="@style/font_ssl_12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-" />
                            <TextView
                                android:id="@+id/tx_gravity_deposit_batch_symbol2"
                                style="@style/font_ss_12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_2"
                                android:text="-" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>