<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_2"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/space_6"
    app:cardElevation="1.5dp"
    app:cardBackgroundColor="@color/colorTransBg8"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_16">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dash_ok_icon"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:src="@drawable/okex_token_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dash_ok_icon"
                android:layout_marginLeft="@dimen/space_8"
                android:text="TOKT"
                style="@style/font_ss_14_ok"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/ok_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssm_17_white"/>
                <TextView
                    android:id="@+id/ok_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/font_ss_14_gray1"
                    android:text="-"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_12"
            android:background="@color/colorGray3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_available"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/ok_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="-"
                style="@style/font_ssl_12_white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_locked"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/ok_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="-"
                style="@style/font_ssl_12_white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_deposited"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/ok_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="-"
                style="@style/font_ssl_12_white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_withdrawing"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/ok_withdrawing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="-"
                style="@style/font_ssl_12_white"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layer_ok_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/btn_ok_deposit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/deposit_s_ic"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    style="@style/font_ss_12_white"
                    android:text="@string/str_deposit" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_ok_withdraw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/withdraw_s_ic"
                    android:drawablePadding="@dimen/space_4"
                    android:gravity="center"
                    style="@style/font_ss_12_white"
                    android:text="@string/str_withdraw" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_ok_vote"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:minHeight="@dimen/space_40"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_trans_with_border"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/vote_ic"
                android:drawablePadding="@dimen/space_4"
                android:gravity="center"
                style="@style/font_ss_12_white"
                android:text="@string/str_vote_for_validator" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btn_ok_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/btn_ok_send"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/send_ic"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_12_white"
                    android:text="@string/str_send" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_ok_receive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/qrcode_ic"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_12_white"
                    android:text="@string/str_receive" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>