<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cosmos"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_bar_height"
        android:background="@color/colorBlack"
        android:theme="@style/AppTheme.AppBarOverlay">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_ssm_17_white"
            android:text="@string/str_watch_address_path_c"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/input_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_4"
        android:orientation="vertical"
        android:layout_below="@+id/tool_bar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_ssl_11_white"
            android:text="@string/str_watch_msg"/>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/space_80"
            android:layout_marginTop="@dimen/space_8"
            android:hint="@string/str_address_pubkey"
            android:textCursorDrawable="@drawable/white_cursor"
            android:maxLength="256"
            android:textColorHint="@color/colorGray4"
            android:background="@drawable/edittext_box"
            android:paddingEnd="@dimen/space_12"
            style="@style/font_ss_12_white"
            android:imeOptions="actionNext"
            android:scrollbars="vertical"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_8"
        android:layout_below="@+id/input_layer"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="1">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_qr"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/btn_trans_with_border">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qr_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                style="@style/font_ss_9_white"
                android:text="@string/str_qr_code"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_history"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_8"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/btn_trans_with_border">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                style="@style/font_ss_9_white"
                android:text="@string/str_recent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_paste"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_36"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_8"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/btn_trans_with_border">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/copy_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                style="@style/font_ss_9_white"
                android:text="@string/str_paste"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_cancel"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>