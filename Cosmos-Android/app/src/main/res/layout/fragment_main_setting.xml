                        android:id="@+id/applock_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/arrow_applock"
                        android:layout_marginRight="@dimen/space_4"
                        android:layout_centerVertical="true"
                        style="@style/font_ss_11_gray1"
                        android:text="@string/str_app_applock_enabled"/>
                </RelativeLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/card_currency"
