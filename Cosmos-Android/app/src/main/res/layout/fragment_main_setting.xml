                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_next_gr"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/card_version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_8"
                android:clickable="true"
                android:background="@drawable/box_trans_round">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_6"
                        android:layout_centerVertical="true"
                        style="@style/font_ss_12_white"
                        android:text="@string/str_version"/>
                    <ImageView
                        android:id="@+id/arrow_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_next_gr"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/version_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/arrow_version"
                        android:layout_marginRight="@dimen/space_4"
                        android:layout_centerVertical="true"
                        style="@style/font_ss_11_gray1"
                        android:text="1.0.12"/>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>