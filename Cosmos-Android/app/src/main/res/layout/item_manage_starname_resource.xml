<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_6"
            android:paddingRight="@dimen/space_6"
            android:paddingTop="@dimen/space_4"
            android:paddingBottom="@dimen/space_10">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/chain_img"
                    android:layout_width="@dimen/space_36"
                    android:layout_height="@dimen/space_36"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_chain_img"/>
                <TextView
                    android:id="@+id/chain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/chain_img"
                    style="@style/font_ss_14_white"
                    android:text="Chain Name"/>
                <TextView
                    android:id="@+id/btn_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/space_4"
                    android:paddingBottom="@dimen/space_4"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="@dimen/space_4"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    style="@style/font_ss_12_red"
                    android:text="Remove"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/chain_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:singleLine="true"
                android:ellipsize="middle"
                style="@style/font_ss_12_gray1"
                android:text="addresssss"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>