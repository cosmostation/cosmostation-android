<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/tx_send_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tx_send"/>
                <TextView
                    android:id="@+id/tx_send_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    android:text="@string/tx_transfer"
                    style="@style/font_ss_15_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_from"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:id="@+id/tx_send_from0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4">
                    <TextView
                        android:id="@+id/tx_send_from0_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_from0_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_from0_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_from0_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_from0_symbol"
                        android:layout_toLeftOf="@+id/tx_send_from0_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tx_send_from1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tx_send_from1_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_from1_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_from1_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_from1_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_from1_symbol"
                        android:layout_toLeftOf="@+id/tx_send_from1_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tx_send_from2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tx_send_from2_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_from2_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_from2_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_from2_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_from2_symbol"
                        android:layout_toLeftOf="@+id/tx_send_from2_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tx_send_from3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tx_send_from3_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_from3_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_from3_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_from3_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_from3_symbol"
                        android:layout_toLeftOf="@+id/tx_send_from3_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_to"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:id="@+id/tx_send_to0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4">
                    <TextView
                        android:id="@+id/tx_send_to0_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_to0_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_to0_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_to0_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_to0_symbol"
                        android:layout_toLeftOf="@+id/tx_send_to0_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tx_send_to1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tx_send_to1_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_to1_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_to1_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_to1_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_to1_symbol"
                        android:layout_toLeftOf="@+id/tx_send_to1_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tx_send_to2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tx_send_to2_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_to2_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_to2_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_to2_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_to2_symbol"
                        android:layout_toLeftOf="@+id/tx_send_to2_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tx_send_to3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tx_send_to3_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/tx_send_to3_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_send_to3_address"
                        android:layout_alignParentRight="true"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/tx_send_to3_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_send_to3_symbol"
                        android:layout_toLeftOf="@+id/tx_send_to3_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>