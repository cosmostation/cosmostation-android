<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/earning_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBgOsmosis"
        app:cardUseCompatPadding="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginRight="@dimen/space_18"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/myfarming_img"
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_64"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/icon_myfarming"/>

                <TextView
                    android:id="@+id/myfarming_apr"
                    style="@style/font_ssm_24_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="123.87%"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/myfarming_img"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/myfarming_pool_id"
                        style="@style/font_ssm_17_osmosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MY EARNING #0"/>
                    <TextView
                        android:id="@+id/myfarming_coin_pair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ATMO / OSMO"
                        android:layout_marginTop="@dimen/space_8"
                        style="@style/font_ss_12_gray1"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray3"
                android:layout_marginTop="@dimen/space_16"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonded\n(Locked &amp; Earning)"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/bonded_denom"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="-" />
                <TextView
                    android:id="@+id/bonded_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/bonded_denom"
                    android:layout_marginRight="@dimen/space_2"
                    style="@style/font_ssl_12_white"
                    android:gravity="right"
                    android:text="-"/>
                <TextView
                    android:id="@+id/bonded_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/bonded_amount"
                    style="@style/font_ss_9_gray1"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unbonding\n(On Unlocking)"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/unbonding_denom"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="-" />
                <TextView
                    android:id="@+id/unbonding_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/unbonding_denom"
                    android:layout_marginRight="@dimen/space_2"
                    style="@style/font_ssl_12_white"
                    android:gravity="right"
                    android:text="-"/>
                <TextView
                    android:id="@+id/unbonding_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/unbonding_amount"
                    style="@style/font_ss_9_gray1"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unbonded\n(Ready to Unlock)"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/unbonded_denom"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="-" />
                <TextView
                    android:id="@+id/unbonded_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/unbonded_denom"
                    android:layout_marginRight="@dimen/space_2"
                    style="@style/font_ssl_12_white"
                    android:gravity="right"
                    android:text="-"/>
                <TextView
                    android:id="@+id/unbonded_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/unbonded_amount"
                    style="@style/font_ss_9_gray1"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Reward"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/next_reward_denom"
                    style="@style/font_ss_12_osmo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="OSMO" />
                <TextView
                    android:id="@+id/next_reward_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/next_reward_denom"
                    android:layout_marginRight="@dimen/space_2"
                    style="@style/font_ssl_12_white"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray3"
                android:layout_marginTop="@dimen/space_16"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/available_denom"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="-" />
                <TextView
                    android:id="@+id/available_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/available_denom"
                    android:layout_marginRight="@dimen/space_2"
                    style="@style/font_ssl_12_white"
                    android:gravity="right"
                    android:text="-"/>
                <TextView
                    android:id="@+id/available_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/available_amount"
                    style="@style/font_ss_9_gray1"
                    android:gravity="right"
                    android:text="-"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>