<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_ss_14_gray1"
            android:text="@string/str_recipient_address"/>

        <RelativeLayout
            android:id="@+id/receive_layer"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_8"
            android:layout_height="@dimen/space_50"
            android:clickable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:background="@drawable/edittext_box"/>
            <ImageView
                android:id="@+id/key_status"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/key_off"/>
            <ImageView
                android:id="@+id/key_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_down_gr"/>
            <TextView
                android:id="@+id/key_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/key_status"
                android:layout_toLeftOf="@+id/key_arrow"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:ellipsize="middle"
                android:singleLine="true"
                style="@style/font_ss_12_white"
                android:text="@string/str_press_select_recipient_account"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_warnning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_control"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_40"
        android:paddingRight="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_32"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/warn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/warning_ic"/>
        <TextView
            android:id="@+id/warn_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_6"
            android:gravity="center"
            style="@style/font_ss_12_gray1"
            android:text="@string/error_can_not_bep3_account_msg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_before"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_back"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>