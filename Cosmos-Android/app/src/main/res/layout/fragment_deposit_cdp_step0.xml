<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_control">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/collateral_input_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginTop="@dimen/space_16">
                <LinearLayout
                    android:id="@+id/collateral_symbol_layer"
                    android:layout_width="@dimen/space_40"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/collateral_icon"
                        android:layout_width="@dimen/space_32"
                        android:layout_height="@dimen/space_32"
                        android:src="@drawable/token_ic"/>
                    <TextView
                        android:id="@+id/collateral_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COIN"
                        style="@style/font_ss_10_white"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/collateral_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_6"
                    android:layout_toRightOf="@+id/collateral_symbol_layer"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:maxLength="46"
                    android:textColorHint="@color/colorGray4"
                    android:background="@drawable/edittext_box"
                    android:paddingRight="@dimen/space_60"
                    style="@style/font_ss_12_white"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical|left"/>
                <ImageView
                    android:id="@+id/collateral_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_8"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/close_btn"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_12">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_12_gray1"
                            android:text="@string/str_max_depositable_amount"/>
                        <TextView
                            android:id="@+id/collateral_max_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_12_gray1"
                            android:text="-"/>
                        <TextView
                            android:id="@+id/collateral_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="COIN"
                            style="@style/font_ss_12_white" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_add_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:background="@drawable/btn_trans_with_border"
                        style="@style/font_ss_12_white"
                        android:textAllCaps="false"
                        android:text="@string/str_add1"/>
                    <Button
                        android:id="@+id/btn_add_1_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_8"
                        android:background="@drawable/btn_trans_with_border"
                        style="@style/font_ss_12_white"
                        android:textAllCaps="false"
                        android:text="@string/str_add_one_fourths"/>
                    <Button
                        android:id="@+id/btn_add_half"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_8"
                        android:background="@drawable/btn_trans_with_border"
                        style="@style/font_ss_12_white"
                        android:textAllCaps="false"
                        android:text="@string/str_add_half"/>
                    <Button
                        android:id="@+id/btn_add_3_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_8"
                        android:background="@drawable/btn_trans_with_border"
                        style="@style/font_ss_12_white"
                        android:textAllCaps="false"
                        android:text="@string/str_add_three_fourths"/>
                    <Button
                        android:id="@+id/btn_add_max"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_8"
                        android:background="@drawable/btn_trans_with_border"
                        style="@style/font_ss_12_white"
                        android:textAllCaps="false"
                        android:text="@string/str_add_max"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:background="@drawable/box_trans_round"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_8"
                        android:layout_centerVertical="true"
                        style="@style/font_ss_14_gray1"
                        android:text="Risk Score"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/arrow"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/risk_rate_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_10_white"
                            android:text="SAFE"/>
                        <TextView
                            android:id="@+id/risk_score_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_26_white"
                            android:text="44"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/risk_rate_after_layer"
                        android:layout_marginRight="@dimen/space_16"
                        android:layout_marginLeft="@dimen/space_16"
                        android:src="@drawable/risk_arrow"/>
                    <LinearLayout
                        android:id="@+id/risk_rate_after_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/risk_rate_after"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_10_white"
                            android:text="SAFE"/>
                        <TextView
                            android:id="@+id/risk_score_after"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_ss_26_white"
                            android:text="44"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/deposit_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_16"
                            style="@style/font_ssl_14_white"
                            android:text="1232131231"/>
                        <TextView
                            android:id="@+id/deposit_after"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_16"
                            style="@style/font_ssl_14_white"
                            android:text="1232131231"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_cancel"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="2"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>