<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_32">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_24"
                    style="@style/font_ss_17_gray8"
                    android:gravity="center"
                    android:text="Risk Score"
                    android:visibility="gone"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginTop="@dimen/space_12"
                    android:src="@drawable/riskscore_img"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:id="@+id/risk_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:orientation="vertical"
                    android:background="@drawable/btn_score_safe_fill"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/risk_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ssm_12_black"
                        android:gravity="center"
                        android:text="SAFE"/>
                    <TextView
                        android:id="@+id/risk_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ss_26_black"
                        android:gravity="center"
                        android:text="20.00"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:background="@color/colorGray10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18">
                    <TextView
                        android:id="@+id/current_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_current_title1"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/font_ssl_14_black"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/liquidation_price_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18">
                    <TextView
                        android:id="@+id/liquidation_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_liquidation_title1"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/liquidation_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        style="@style/font_ssl_14_black"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:background="@color/colorGray10"/>


                <TextView
                    android:id="@+id/dialog_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    style="@style/font_ss_14_gray1"
                    android:text="@string/str_help_risk"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/space_24"
                    android:background="@color/colorGray10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_nega"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_dia_white_left"
                        style="@style/font_ss_14_red"
                        android:text="@string/str_cancel"/>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray10"/>
                    <Button
                        android:id="@+id/btn_posi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_dia_white_right"
                        style="@style/font_ss_14_gray8"
                        android:text="@string/str_confirm"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>